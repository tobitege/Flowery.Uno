<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.CustomControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:weather="using:Flowery.Controls.Weather"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True" Background="Transparent" Padding="0,0,0,32">
        <StackPanel Spacing="16" Margin="24,0,24,32">

            <StackPanel>
                <local:SectionHeader SectionId="size-dropdown" Title="Size Dropdown" />
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel Spacing="6" Width="180">
                        <TextBlock Text="Default" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySizeDropdown />
                    </StackPanel>
                    <StackPanel Spacing="6" Width="140">
                        <TextBlock Text="Abbreviations" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySizeDropdown ShowAbbreviations="True" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="modifier-keys-observer" Title="Modifier Keys (Observer)" />
                <TextBlock Text="Live keyboard state observer showing modifier and lock key states. Switch between structural styles below."
                    Opacity="0.7" TextWrapping="Wrap"
                    daisy:FlowerySizeManager.ResponsiveFont="Primary"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="24" Margin="0,16,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Three-Dimensional (Stock)" FontSize="12" Opacity="0.6" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyModifierKeys KbdStyle="ThreeDimensional" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Flat Style" FontSize="12" Opacity="0.6" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyModifierKeys KbdStyle="Flat" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Keycap Style (Tactile)" FontSize="12" Opacity="0.6"     Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyModifierKeys KbdStyle="Keycap" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Ghost Style (Minimal)" FontSize="12" Opacity="0.6" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyModifierKeys KbdStyle="Ghost" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="weather-card" Title="Weather Card" />
                <TextBlock
                    Text="Complete weather widget with current conditions and forecast. The first card shows a 7-day Fahrenheit forecast (stress-testing 3-digit temps), while the second shows a 5-day Celsius forecast. AutoFitItems automatically scales day items to fit."
                    Opacity="0.8" TextWrapping="Wrap"
                    daisy:FlowerySizeManager.ResponsiveFont="Primary"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal">
                    <weather:DaisyWeatherCard
                        x:Name="FullWeatherCard"
                        Margin="0,0,24,24"
                        Width="400"
                        HorizontalAlignment="Left"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Temperature="98"
                        FeelsLike="105"
                        TemperatureUnit="F"
                        Condition="Sunny"
                        UvIndex="9"
                        UvMax="11"
                        WindSpeed="5"
                        WindMax="12"
                        Humidity="45"
                        HumidityMax="60"
                        Background="{ThemeResource DaisyBase200Brush}" />

                    <weather:DaisyWeatherCard
                        x:Name="CompactWeatherCard"
                        Margin="0,0,24,24"
                        Width="360"
                        HorizontalAlignment="Left"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Temperature="22"
                        FeelsLike="24"
                        Condition="Sunny"
                        ShowMetrics="False"
                        Background="{ThemeResource DaisyBase200Brush}" />
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="current-weather" Title="Current Weather" />
                <TextBlock Text="Standalone current weather display with temperature, condition, and sun times."
                    Opacity="0.8"
                    TextWrapping="Wrap"
                    daisy:FlowerySizeManager.ResponsiveFont="Primary"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal">
                    <weather:DaisyWeatherCurrent
                        x:Name="CurrentWeatherCloudy"
                        Margin="0,0,24,24"
                        Width="300"
                        HorizontalAlignment="Left"
                        Padding="16"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Temperature="15"
                        FeelsLike="13"
                        Condition="Cloudy"
                        Background="{ThemeResource DaisyBase200Brush}" />

                    <weather:DaisyWeatherCurrent
                        x:Name="CurrentWeatherSunny"
                        Margin="0,0,24,24"
                        Width="300"
                        HorizontalAlignment="Left"
                        Padding="16"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Temperature="28"
                        FeelsLike="32"
                        Condition="Sunny"
                        TemperatureUnit="C"
                        ShowSunTimes="False"
                        Background="{ThemeResource DaisyBase200Brush}" />

                    <weather:DaisyWeatherCurrent
                        x:Name="CurrentWeatherSnow"
                        Margin="0,0,24,24"
                        Width="300"
                        HorizontalAlignment="Left"
                        Padding="16"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Temperature="-5"
                        FeelsLike="-12"
                        Condition="Snow"
                        Background="{ThemeResource DaisyBase200Brush}" />
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="weather-forecast" Title="Weather Forecast" />
                <TextBlock Text="Horizontal forecast strip showing upcoming days."
                    Opacity="0.8"
                    TextWrapping="Wrap"
                    daisy:FlowerySizeManager.ResponsiveFont="Primary"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal">
                    <weather:DaisyWeatherForecast 
                        x:Name="ForecastStrip"
                        Margin="0,0,24,24"
                        Width="480"
                        HorizontalAlignment="Left"
                        Padding="16"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Background="{ThemeResource DaisyBase200Brush}" />
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="weather-metrics" Title="Weather Metrics" />
                <TextBlock Text="Detailed metrics table showing UV, wind, and humidity."
                    Opacity="0.8"
                    TextWrapping="Wrap"
                    daisy:FlowerySizeManager.ResponsiveFont="Primary"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal">
                    <weather:DaisyWeatherMetrics
                        Margin="0,0,24,24"
                        Width="300"
                        HorizontalAlignment="Left"
                        Padding="16"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        UvIndex="0"
                        UvMax="1"
                        WindSpeed="9"
                        WindMax="13"
                        WindUnit="km/h"
                        Humidity="78"
                        HumidityMax="86"
                        Background="{ThemeResource DaisyBase200Brush}" />
                    <weather:DaisyWeatherMetrics
                        Margin="0,0,24,24"
                        Width="300"
                        HorizontalAlignment="Left"
                        Padding="16"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        UvIndex="7"
                        UvMax="9"
                        WindSpeed="15"
                        WindMax="25"
                        WindUnit="mph"
                        Humidity="45"
                        HumidityMax="60"
                        Background="{ThemeResource DaisyBase200Brush}" />
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="weather-conditions" Title="Weather Icon (Animated)" />
                <TextBlock Text="Animated weather condition icons with unique animations per weather type."
                    Opacity="0.8" TextWrapping="Wrap"
                    daisy:FlowerySizeManager.ResponsiveFont="Primary"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal">
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Unknown" IconSize="40"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="Unknown" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Sunny" IconSize="40"
                            Foreground="{ThemeResource DaisyWarningBrush}" />
                        <TextBlock Text="Sunny" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Clear" IconSize="40"
                            Foreground="{ThemeResource DaisyWarningBrush}" />
                        <TextBlock Text="Clear" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="PartlyCloudy" IconSize="40"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="PartlyCloudy" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Cloudy" IconSize="40"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="Cloudy" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Overcast" IconSize="40"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="Overcast" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Mist" IconSize="40"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="Mist" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Fog" IconSize="40"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="Fog" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="LightRain" IconSize="40"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="LightRain" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Rain" IconSize="40"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="Rain" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="HeavyRain" IconSize="40"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="HeavyRain" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Drizzle" IconSize="40"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="Drizzle" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Showers" IconSize="40"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="Showers" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Thunderstorm" IconSize="40"
                            Foreground="{ThemeResource DaisyErrorBrush}" />
                        <TextBlock Text="Thunderstorm" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="LightSnow" IconSize="40"
                            Foreground="{ThemeResource DaisySecondaryBrush}" />
                        <TextBlock Text="LightSnow" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Snow" IconSize="40"
                            Foreground="{ThemeResource DaisySecondaryBrush}" />
                        <TextBlock Text="Snow" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="HeavySnow" IconSize="40"
                            Foreground="{ThemeResource DaisySecondaryBrush}" />
                        <TextBlock Text="HeavySnow" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Sleet" IconSize="40"
                            Foreground="{ThemeResource DaisySecondaryBrush}" />
                        <TextBlock Text="Sleet" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="FreezingRain" IconSize="40"
                            Foreground="{ThemeResource DaisySecondaryBrush}" />
                        <TextBlock Text="FreezingRain" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Hail" IconSize="40"
                            Foreground="{ThemeResource DaisySecondaryBrush}" />
                        <TextBlock Text="Hail" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Windy" IconSize="40"
                            Foreground="{ThemeResource DaisyAccentBrush}" />
                        <TextBlock Text="Windy" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                </daisy:WrapPanel>
                <TextBlock Text="Static (animations disabled)" daisy:FlowerySizeManager.ResponsiveFont="Secondary" Opacity="0.6" Margin="0,8,0,4" />
                <daisy:WrapPanel Orientation="Horizontal">
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Sunny" IconSize="32" IsAnimated="False"
                            Foreground="{ThemeResource DaisyWarningBrush}" />
                        <TextBlock Text="Static" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Rain" IconSize="32" IsAnimated="False"
                            Foreground="{ThemeResource DaisyInfoBrush}" />
                        <TextBlock Text="Static" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Margin="8" HorizontalAlignment="Center">
                        <weather:DaisyWeatherIcon Condition="Thunderstorm" IconSize="32" IsAnimated="False"
                            Foreground="{ThemeResource DaisyErrorBrush}" />
                        <TextBlock Text="Static" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader SectionId="service-integration" Title="Service Integration" />
                <daisy:DaisyAlert Variant="Info">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Using Weather Services" FontWeight="SemiBold" />
                        <TextBlock TextWrapping="Wrap" daisy:FlowerySizeManager.ResponsiveFont="Primary"
                            Text="The weather widgets support automatic data fetching via IWeatherService. Set the WeatherService and Location properties to enable:" />
                        <daisy:DaisyCard Variant="Compact"
                            BodyPadding="12">
                            <TextBlock FontFamily="Consolas" FontSize="12" xml:space="preserve" TextWrapping="Wrap"><![CDATA[<weather:DaisyWeatherCard Location="London,UK">
    <weather:DaisyWeatherCard.WeatherService>
        <services:OpenWeatherMapService ApiKey="YOUR_API_KEY" />
    </weather:DaisyWeatherCard.WeatherService>
</weather:DaisyWeatherCard>]]>
                            </TextBlock>
                        </daisy:DaisyCard>
                        <TextBlock TextWrapping="Wrap" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary"
                            Text="Get a free API key from openweathermap.org to use the built-in OpenWeatherMapService, or implement IWeatherService for custom providers." />
                    </StackPanel>
                </daisy:DaisyAlert>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel>
                <local:SectionHeader Title="Live API Test" />
                <TextBlock Text="Test the OpenWeatherMap service integration with your API key."
                    Opacity="0.7" TextWrapping="Wrap" daisy:FlowerySizeManager.ResponsiveFont="Primary" />
                <daisy:DaisyAlert Variant="Warning" Padding="8" Width="460" HorizontalAlignment="Left">
                    <TextBlock TextWrapping="Wrap" FontSize="12">
                        <Run FontWeight="SemiBold">Note:</Run>
                        <Run Text=" New OpenWeatherMap API keys can take up to 2 hours to activate after creation. If you get 'Invalid API key', please wait and try again later." />
                    </TextBlock>
                </daisy:DaisyAlert>

                <daisy:DaisyCard BodyPadding="16" Width="460" HorizontalAlignment="Left">
                    <StackPanel>
                        <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="API Key:" VerticalAlignment="Center" />
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <daisy:DaisyInput x:Name="ApiKeyInput"
                                    PlaceholderText="Enter your OpenWeatherMap API key"
                                    Width="240" />
                                <daisy:DaisyButton x:Name="TestApiKeyBtn"
                                    Content="Test Key"
                                    Size="Small"
                                    ButtonStyle="Outline"
                                    Click="TestApiKeyBtn_Click" />
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Location:" VerticalAlignment="Center" />
                            <daisy:DaisyInput x:Name="LocationInput"
                                Grid.Row="1" Grid.Column="1"
                                Text="London,UK"
                                PlaceholderText="City name (e.g., London,UK or New York,US)"
                                Width="320"
                                KeyDown="LocationInput_KeyDown" />

                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <daisy:DaisyButton x:Name="FetchWeatherBtn"
                                    Content="Fetch Weather"
                                    Variant="Primary"
                                    Click="FetchWeatherBtn_Click" />
                                <daisy:DaisyButton x:Name="ClearResultsBtn"
                                    Content="Clear"
                                    Variant="Ghost"
                                    Click="ClearResultsBtn_Click" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </daisy:DaisyCard>

                <daisy:DaisyAlert x:Name="StatusAlert" Visibility="Collapsed" Width="460" HorizontalAlignment="Left">
                    <TextBlock x:Name="StatusMessage" TextWrapping="Wrap" />
                </daisy:DaisyAlert>

                <StackPanel x:Name="LiveResultPanel" Visibility="Collapsed" Margin="0,16,0,0">
                    <TextBlock Text="Live Weather Data:" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <weather:DaisyWeatherCard x:Name="LiveWeatherCard"
                        Width="460" HorizontalAlignment="Left"
                        BorderBrush="{ThemeResource DaisyBase300Brush}"
                        BorderThickness="1"
                        Background="{ThemeResource DaisyBase200Brush}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</local:ScrollableExamplePage>
