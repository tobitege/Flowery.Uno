<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.DataDisplayExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:flowery="using:Flowery.Controls"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <Grid>
        <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True"
                      Background="Transparent" Padding="0,0,0,32" DataContext="{x:Bind Localization, Mode=OneWay}">
            <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Accordion -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="accordion" Title="Accordion" />
                <TextBlock Text="{Binding [Gallery_DataDisplay_Description_Accordion]}"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <StackPanel Spacing="8" MaxWidth="500" HorizontalAlignment="Left">
                    <daisy:DaisyCollapse Header="Click to expand (Arrow)" IsExpanded="False" Variant="Arrow">
                        <TextBlock Text="Accordion body content."
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   Opacity="0.8" />
                    </daisy:DaisyCollapse>
                    <daisy:DaisyCollapse Header="Click to expand (Plus)" IsExpanded="True" Variant="Plus">
                        <TextBlock Text="Another accordion body content."
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   Opacity="0.8" />
                    </daisy:DaisyCollapse>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="animatednumber" Title="Animated Number" />
                <TextBlock Text="Animates value changes with a slide transition."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <daisy:DaisyButton Content="−" Size="Small" Click="AnimatedNumber_Decrease_Click" />
                    <daisy:DaisyAnimatedNumber x:Name="AnimatedNumberDemo" Value="42" Size="Large" />
                    <daisy:DaisyButton Content="+" Size="Small" Click="AnimatedNumber_Increase_Click" />
                </StackPanel>

                <TextBlock Text="Sizes" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                           Foreground="{ThemeResource DaisyBaseContentBrush}"
                           flowery:FlowerySizeManager.IgnoreGlobalSize="True" />
                <StackPanel Orientation="Horizontal" Spacing="12"
                            flowery:FlowerySizeManager.IgnoreGlobalSize="True">
                    <daisy:DaisyAnimatedNumber Value="7" Size="ExtraSmall" />
                    <daisy:DaisyAnimatedNumber Value="12" Size="Small" />
                    <daisy:DaisyAnimatedNumber Value="34" Size="Medium" />
                    <daisy:DaisyAnimatedNumber Value="56" Size="Large" />
                    <daisy:DaisyAnimatedNumber Value="78" Size="ExtraLarge" />
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="avatar" Title="Avatar" />

                <daisy:WrapPanel Orientation="Horizontal" Spacing="16">
                    <!-- Shapes -->
                    <StackPanel Spacing="4" MinWidth="160">
                        <TextBlock Text="Shapes" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <daisy:DaisyAvatar Shape="Circle" IsPlaceholder="True" Initials="AB" Size="Medium" />
                            <daisy:DaisyAvatar Shape="Rounded" IsPlaceholder="True" Initials="CD" Size="Medium" />
                            <daisy:DaisyAvatar Shape="Square" IsPlaceholder="True" Initials="EF" Size="Medium" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Sizes -->
                    <StackPanel Spacing="4" MinWidth="220" flowery:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="Sizes" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Bottom">
                            <daisy:DaisyAvatar Size="ExtraSmall" IsPlaceholder="True" Initials="XS" />
                            <daisy:DaisyAvatar Size="Small" IsPlaceholder="True" Initials="S" />
                            <daisy:DaisyAvatar Size="Medium" IsPlaceholder="True" Initials="M" />
                            <daisy:DaisyAvatar Size="Large" IsPlaceholder="True" Initials="L" />
                            <daisy:DaisyAvatar Size="ExtraLarge" IsPlaceholder="True" Initials="XL" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Spacing="4" MinWidth="100">
                        <TextBlock Text="Status" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <daisy:DaisyAvatar IsPlaceholder="True" Initials="ON" Status="Online" Size="Medium" />
                            <daisy:DaisyAvatar IsPlaceholder="True" Initials="OF" Status="Offline" Size="Medium" />
                        </StackPanel>
                    </StackPanel>

                    <!-- With Ring -->
                    <StackPanel Spacing="4" MinWidth="150">
                        <TextBlock Text="With Ring" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <daisy:DaisyAvatar IsPlaceholder="True" Initials="PR" HasRing="True" RingColor="Primary" Size="Medium" />
                            <daisy:DaisyAvatar IsPlaceholder="True" Initials="SC" HasRing="True" RingColor="Success" Size="Medium" />
                            <daisy:DaisyAvatar IsPlaceholder="True" Initials="WR" HasRing="True" RingColor="Warning" Size="Medium" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Symbol Icons -->
                    <StackPanel Spacing="4" MinWidth="280">
                        <TextBlock Text="Symbol Icons" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="Built-in Windows symbols"
                                   Opacity="0.5" FontSize="11"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2,0,0">
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <daisy:DaisyAvatar IsPlaceholder="True" PlaceholderSymbol="Contact" Size="Medium" />
                                <TextBlock Text="Contact" FontSize="9" Opacity="0.5" HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <daisy:DaisyAvatar IsPlaceholder="True" PlaceholderSymbol="People" Size="Medium" />
                                <TextBlock Text="People" FontSize="9" Opacity="0.5" HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <daisy:DaisyAvatar IsPlaceholder="True" PlaceholderSymbol="Account" Size="Medium" />
                                <TextBlock Text="Account" FontSize="9" Opacity="0.5" HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <daisy:DaisyAvatar IsPlaceholder="True" PlaceholderSymbol="Admin" Size="Medium" HasRing="True" RingColor="Primary" />
                                <TextBlock Text="Admin" FontSize="9" Opacity="0.5" HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <daisy:DaisyAvatar IsPlaceholder="True" PlaceholderSymbol="SolidStar" Size="Medium" HasRing="True" RingColor="Warning" />
                                <TextBlock Text="Star" FontSize="9" Opacity="0.5" HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Avatar Group -->
                    <StackPanel Spacing="4" MinWidth="160">
                        <TextBlock Text="Avatar Group" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyAvatarGroup Size="Medium" Overlap="12" MaxVisible="5"
                            Initials="A,B,C,D,E,F" />
                    </StackPanel>

                    <!-- Avatar Group with Icons -->
                    <StackPanel Spacing="4" MinWidth="160">
                        <TextBlock Text="Group (with icons)" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyAvatarGroup Size="Medium" Overlap="12" MaxVisible="4">
                            <StackPanel Orientation="Horizontal">
                                <daisy:DaisyAvatar HasRing="True" RingColor="Primary" Size="Medium"
                                    IsPlaceholder="True"
                                    IconData="M12 4a4 4 0 014 4 4 4 0 01-4 4 4 4 0 01-4-4 4 4 0 014-4m0 10c4.42 0 8 1.79 8 4v2H4v-2c0-2.21 3.58-4 8-4z" />
                                <daisy:DaisyAvatar HasRing="True" RingColor="Secondary" Size="Medium"
                                    IsPlaceholder="True"
                                    IconData="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6l2-1.09V17h2V9L12 3m6.82 6L12 12.72 5.18 9 12 5.28 18.82 9M17 16l-5 2.72L7 16v-3.73L12 15l5-2.73V16z" />
                                <daisy:DaisyAvatar HasRing="True" RingColor="Accent" Size="Medium"
                                    IsPlaceholder="True"
                                    IconData="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2m-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                                <daisy:DaisyAvatar HasRing="True" RingColor="Success" Size="Medium"
                                    IsPlaceholder="True"
                                    IconData="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                                <daisy:DaisyAvatar HasRing="True" RingColor="Warning" Size="Medium"
                                    IsPlaceholder="True"
                                    IconData="M19.35 10.04A7.49 7.49 0 0012 4C9.11 4 6.6 5.64 5.35 8.04A5.994 5.994 0 000 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96z" />
                            </StackPanel>
                        </daisy:DaisyAvatarGroup>
                    </StackPanel>

                    <!-- Vertical Avatar Group -->
                    <StackPanel Spacing="4" MinWidth="80">
                        <TextBlock Text="Vertical" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyAvatarGroup Size="Small" Overlap="10" MaxVisible="4"
                            Orientation="Vertical" Initials="1,2,3,4,5" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Badge -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="badge" Title="Badge" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <daisy:DaisyBadge Content="Default" />
                    <daisy:DaisyBadge Content="Primary" Variant="Primary" />
                    <daisy:DaisyBadge Content="Secondary" Variant="Secondary" />
                    <daisy:DaisyBadge Content="Accent" Variant="Accent" />
                    <daisy:DaisyBadge Content="Info" Variant="Info" />
                    <daisy:DaisyBadge Content="Success" Variant="Success" />
                    <daisy:DaisyBadge Content="Warning" Variant="Warning" />
                    <daisy:DaisyBadge Content="Error" Variant="Error" />
                    <daisy:DaisyBadge Content="Outline" Variant="Primary" IsOutline="True" />
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="chat-bubble" Title="Chat Bubble" />
                <TextBlock Text="Chat bubbles with optional header/footer and left/right alignment."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10" MaxWidth="300" HorizontalAlignment="Left">
                    <daisy:DaisyChatBubble Header="Alice" Footer="12:01 PM" Variant="Neutral">
                        <TextBlock Text="Hey! Are we still on for today?"
                                   TextWrapping="Wrap" />
                    </daisy:DaisyChatBubble>
                    <daisy:DaisyChatBubble Header="You" Footer="12:02 PM" Variant="Primary" IsEnd="True">
                        <TextBlock Text="Yep — see you at 3."
                                   TextWrapping="Wrap" />
                    </daisy:DaisyChatBubble>
                    <daisy:DaisyChatBubble Header="Alice" Footer="12:03 PM" Variant="Accent">
                        <TextBlock Text="Perfect. Bringing the docs."
                                   TextWrapping="Wrap" />
                    </daisy:DaisyChatBubble>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Collapse -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="collapse" Title="Collapse" />
                <TextBlock Text="{Binding [Gallery_DataDisplay_Description_Collapse]}"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:DaisyCollapse Header="Collapse item" IsExpanded="False" MaxWidth="500" HorizontalAlignment="Left">
                    <TextBlock Text="Collapse body."
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource DaisyBaseContentBrush}"
                               Opacity="0.8" />
                </daisy:DaisyCollapse>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Clock -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="clock" Title="Clock" />
                <TextBlock Text="A comprehensive clock display with Clock, Timer, and Stopwatch modes, plus multiple visual styles."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Orientation="Horizontal" Spacing="24">
                    <!-- Display Styles -->
                    <StackPanel Spacing="8" MinWidth="280">
                        <TextBlock Text="Display Styles" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />

                        <StackPanel Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Segmented (default)" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock Size="Large" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="Flip Clock" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock DisplayStyle="Flip" Size="Large" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="Plain Text" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock DisplayStyle="Text" Size="Large" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Formats -->
                    <StackPanel Spacing="8" MinWidth="280">
                        <TextBlock Text="Formats" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />

                        <StackPanel Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="24-hour (default)" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock DisplayStyle="Text" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="12-hour with AM/PM" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock DisplayStyle="Text" Format="TwelveHour" ShowAmPm="True" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="No seconds" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock DisplayStyle="Text" ShowSeconds="False" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Joined Clock -->
                    <StackPanel Spacing="8" MinWidth="300">
                        <TextBlock Text="Joined Layouts" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />

                        <StackPanel Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Segmented + UseJoin" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock UseJoin="True" Size="Large" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="Flip (auto-joined)" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock DisplayStyle="Flip" ShowSeconds="False" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Labels -->
                    <StackPanel Spacing="8" MinWidth="220">
                        <TextBlock Text="Labels" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />

                        <StackPanel Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Short labels" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock LabelFormat="Short" Size="Small" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="Long labels (vertical)" FontSize="11" Opacity="0.6"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyClock LabelFormat="Long" Orientation="Vertical" Size="Small" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Sizes -->
                    <StackPanel Spacing="8" MinWidth="400" flowery:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="Sizes" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                            <daisy:DaisyClock DisplayStyle="Text" Size="ExtraSmall" />
                            <daisy:DaisyClock DisplayStyle="Text" Size="Small" />
                            <daisy:DaisyClock DisplayStyle="Text" Size="Medium" />
                            <daisy:DaisyClock DisplayStyle="Text" Size="Large" />
                        </StackPanel>
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="contributiongraph" Title="Contribution Graph" />
                <TextBlock Text="GitHub-style heatmap for a year of contributions."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:DaisyContributionGraph Width="720"
                                              Year="2025"
                                              ShowLegend="True"
                                              ShowMonthLabels="True"
                                              ShowDayLabels="True"
                                              HighlightMonthStartBorders="True"
                                              Contributions="{x:Bind ContributionData}" />
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="countdown" Title="Countdown" />
                <TextBlock Text="Versatile time display with countdown, stopwatch, and live clock modes."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <!-- Row 1: Basic Modes -->
                <TextBlock Text="Modes" FontWeight="SemiBold" Margin="0,12,0,6" Opacity="0.8"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal" Spacing="24">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Looping countdown (10→0→10...)" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown Value="10" Digits="2" IsCountingDown="True" 
                                              Loop="True" LoopFrom="10" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="6">
                        <TextBlock Text="Countdown from 59" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown Value="59" Digits="2" IsCountingDown="True" 
                                              Loop="True" LoopFrom="59" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="6">
                        <TextBlock Text="Static display (no timer)" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown Value="42" Digits="2" Mode="Display" Size="Large" />
                    </StackPanel>
                </daisy:WrapPanel>

                <!-- Row 2: Live Clock Units -->
                <TextBlock Text="Live Clock (ClockUnit)" FontWeight="SemiBold" Margin="0,18,0,6" Opacity="0.8"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Orientation="Horizontal" Spacing="24">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Hours" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown ClockUnit="Hours" Digits="2" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="6">
                        <TextBlock Text="Minutes" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown ClockUnit="Minutes" Digits="2" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="6">
                        <TextBlock Text="Seconds" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown ClockUnit="Seconds" Digits="2" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="6">
                        <TextBlock Text="HH:MM:SS via DaisyJoin" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyJoin Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{ThemeResource DaisyBase200Brush}" 
                                        BorderBrush="{ThemeResource DaisyBase300Brush}" 
                                        BorderThickness="1" CornerRadius="4" Padding="8,4">
                                    <daisy:DaisyCountdown ClockUnit="Hours" Digits="2" Size="Medium"
                                        Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                </Border>
                                <Border Background="{ThemeResource DaisyBase200Brush}" 
                                        BorderBrush="{ThemeResource DaisyBase300Brush}" 
                                        BorderThickness="1" CornerRadius="4" Padding="4,4">
                                    <TextBlock Text=":" VerticalAlignment="Center" FontWeight="Bold"
                                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                </Border>
                                <Border Background="{ThemeResource DaisyBase200Brush}" 
                                        BorderBrush="{ThemeResource DaisyBase300Brush}" 
                                        BorderThickness="1" CornerRadius="4" Padding="8,4">
                                    <daisy:DaisyCountdown ClockUnit="Minutes" Digits="2" Size="Medium"
                                        Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                </Border>
                                <Border Background="{ThemeResource DaisyBase200Brush}" 
                                        BorderBrush="{ThemeResource DaisyBase300Brush}" 
                                        BorderThickness="1" CornerRadius="4" Padding="4,4">
                                    <TextBlock Text=":" VerticalAlignment="Center" FontWeight="Bold"
                                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                </Border>
                                <Border Background="{ThemeResource DaisyBase200Brush}" 
                                        BorderBrush="{ThemeResource DaisyBase300Brush}" 
                                        BorderThickness="1" CornerRadius="4" Padding="8,4">
                                    <daisy:DaisyCountdown ClockUnit="Seconds" Digits="2" Size="Medium"
                                        Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                </Border>
                            </StackPanel>
                        </daisy:DaisyJoin>
                    </StackPanel>
                </daisy:WrapPanel>

                <!-- Row 3: Sizes -->
                <TextBlock Text="Sizes" FontWeight="SemiBold" Margin="0,18,0,6" Opacity="0.8"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center"
                            daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                    <daisy:DaisyCountdown Value="23" Digits="2" Size="ExtraSmall" />
                    <daisy:DaisyCountdown Value="23" Digits="2" Size="Small" />
                    <daisy:DaisyCountdown Value="23" Digits="2" Size="Medium" />
                    <daisy:DaisyCountdown Value="23" Digits="2" Size="Large" />
                </StackPanel>

                <!-- Row 4: Digit Formatting -->
                <TextBlock Text="Digit Formatting" FontWeight="SemiBold" Margin="0,18,0,6" Opacity="0.8"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <StackPanel Orientation="Horizontal" Spacing="24">
                    <StackPanel Spacing="4">
                        <TextBlock Text="1 digit" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown Value="8" Digits="1" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <TextBlock Text="2 digits" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown Value="8" Digits="2" Size="Large" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <TextBlock Text="3 digits" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCountdown Value="8" Digits="3" Size="Large" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="alarm" Title="Alarm Scheduler" />
                <TextBlock Text="Schedule alarms with repeat patterns, snooze, and dismiss functionality."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

