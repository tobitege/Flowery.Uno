                        <daisy:DaisyNumberFlow x:Name="NumberFlowDemo4"
                                               FormatString="000"
                                               FontWeight="SemiBold"
                                               ShowDigitBoxes="True"
                                               ShowControls="True"
                                               AllowDigitSelection="True"
                                               WrapAround="True" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="stat" Title="Stat" />
                <StackPanel Spacing="16">
                    <TextBlock Text="Basic Stats" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyStats>
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyStat Title="Total Page Views" Value="89,400" Description="21% more than last month" />
                            <daisy:DaisyStat Title="Downloads" Value="31K" Description="Jan 1st - Feb 1st" Variant="Primary" />
                            <daisy:DaisyStat Title="New Users" Value="4,200" Description="↗︎ 400 (22%)" Variant="Secondary" />
                        </StackPanel>
                    </daisy:DaisyStats>

                    <TextBlock Text="Status Variants" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyStats>
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyStat Title="Success" Value="99.9%" Description="All systems operational" Variant="Success" DescriptionVariant="Success" />
                            <daisy:DaisyStat Title="Warning" Value="3" Description="Issues pending" Variant="Warning" DescriptionVariant="Warning" />
                            <daisy:DaisyStat Title="Error" Value="1" Description="Critical failure" Variant="Error" DescriptionVariant="Error" />
                        </StackPanel>
                    </daisy:DaisyStats>

                    <TextBlock Text="Vertical Layout" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyStats Orientation="Vertical" HorizontalAlignment="Left">
                        <StackPanel>
                            <daisy:DaisyStat Title="Downloads" Value="31K" Description="Jan 1st - Feb 1st" />
                            <daisy:DaisyStat Title="New Users" Value="4,200" Description="↗︎ 400 (22%)" DescriptionVariant="Success" />
                        </StackPanel>
                    </daisy:DaisyStats>

                    <TextBlock Text="Centered" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyStats HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyStat Title="Downloads" Value="31K" Description="Jan 1st - Feb 1st" IsCentered="True" />
                            <daisy:DaisyStat Title="Users" Value="4,200" Description="↗︎ 40 (2%)" Variant="Secondary" DescriptionVariant="Secondary" IsCentered="True" />
                        </StackPanel>
                    </daisy:DaisyStats>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="table" Title="Table" />
                <TextBlock Text="Tables with header rows, active rows, and zebra striping."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:DaisyTable Zebra="True" Size="Medium" Width="620" HorizontalAlignment="Left">
                    <StackPanel>
                        <daisy:DaisyTableRow IsHeader="True">
                            <StackPanel Orientation="Horizontal">
                                <daisy:DaisyTableCell ColumnWidth="220">
                                    <TextBlock Text="Name" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="140">
                                    <TextBlock Text="Role" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="160">
                                    <TextBlock Text="Status" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell>
                                    <TextBlock Text="Actions" />
                                </daisy:DaisyTableCell>
                            </StackPanel>
                        </daisy:DaisyTableRow>
                        <daisy:DaisyTableRow>
                            <StackPanel Orientation="Horizontal">
                                <daisy:DaisyTableCell ColumnWidth="220">
                                    <TextBlock Text="Alex Johnson" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="140">
                                    <TextBlock Text="Admin" Opacity="0.8" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="160">
                                    <daisy:DaisyBadge Content="Active" Variant="Success" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell>
                                    <daisy:DaisyButton Content="Edit" Size="Small" ButtonStyle="Outline" Variant="Primary" />
                                </daisy:DaisyTableCell>
                            </StackPanel>
                        </daisy:DaisyTableRow>
                        <daisy:DaisyTableRow IsActive="True">
                            <StackPanel Orientation="Horizontal">
                                <daisy:DaisyTableCell ColumnWidth="220">
                                    <TextBlock Text="Jamie Lee" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="140">
                                    <TextBlock Text="Contributor" Opacity="0.8" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="160">
                                    <daisy:DaisyBadge Content="Pending" Variant="Warning" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell>
                                    <daisy:DaisyButton Content="View" Size="Small" ButtonStyle="Outline" Variant="Secondary" />
                                </daisy:DaisyTableCell>
                            </StackPanel>
                        </daisy:DaisyTableRow>
                        <daisy:DaisyTableRow>
                            <StackPanel Orientation="Horizontal">
                                <daisy:DaisyTableCell ColumnWidth="220">
                                    <TextBlock Text="Morgan Patel" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="140">
                                    <TextBlock Text="Viewer" Opacity="0.8" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell ColumnWidth="160">
                                    <daisy:DaisyBadge Content="Offline" Variant="Neutral" />
                                </daisy:DaisyTableCell>
                                <daisy:DaisyTableCell>
                                    <daisy:DaisyButton Content="Message" Size="Small" Variant="Ghost" />
                                </daisy:DaisyTableCell>
                            </StackPanel>
                        </daisy:DaisyTableRow>
                    </StackPanel>
                </daisy:DaisyTable>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="text-rotate" Title="Text Rotate (Animation)" />
                <TextBlock Text="Cycles through text items with a fade/slide transition."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <daisy:DaisyTextRotate Duration="6000" TransitionDuration="450">
                        <TextBlock Text="DESIGN" FontSize="28" FontWeight="Bold"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="DEVELOP" FontSize="28" FontWeight="Bold"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="DEPLOY" FontSize="28" FontWeight="Bold"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <TextBlock Text="SCALE" FontSize="28" FontWeight="Bold"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </daisy:DaisyTextRotate>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Providing solutions for" VerticalAlignment="Center"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTextRotate Duration="4000" TransitionDuration="450">
                            <TextBlock Text="Designers" FontWeight="Bold"
                                       Foreground="{ThemeResource DaisyPrimaryBrush}" />
                            <TextBlock Text="Developers" FontWeight="Bold"
                                       Foreground="{ThemeResource DaisyPrimaryBrush}" />
                            <TextBlock Text="Managers" FontWeight="Bold"
                                       Foreground="{ThemeResource DaisyPrimaryBrush}" />
                        </daisy:DaisyTextRotate>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </StackPanel>
