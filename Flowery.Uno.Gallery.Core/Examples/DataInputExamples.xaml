<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.DataInputExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:custom="using:Flowery.Controls"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto"
        IsTabStop="True" Background="Transparent" Padding="0,0,0,32" DataContext="{x:Bind Localization, Mode=OneWay}">

        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Checkbox -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="checkbox" Title="Checkbox" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="180">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCheckBox Content="Default" />
                        <daisy:DaisyCheckBox Content="Primary" Variant="Primary" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Secondary" Variant="Secondary" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Accent" Variant="Accent" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Success" Variant="Success" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Warning" Variant="Warning" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Error" Variant="Error" IsChecked="True" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="180"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCheckBox Content="Extra Small" Size="ExtraSmall" Variant="Primary" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Small" Size="Small" Variant="Primary" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Medium" Size="Medium" Variant="Primary" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Large" Size="Large" Variant="Primary" IsChecked="True" />
                        <daisy:DaisyCheckBox Content="Extra Large" Size="ExtraLarge" Variant="Primary" IsChecked="True" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- File Input -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="file-input" Title="File Input" />
                <TextBlock Text="{Binding [Gallery_DataInput_Description_FileInput]}"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="320" MaxWidth="420">
                        <daisy:DaisyFileInput HorizontalAlignment="Stretch" />
                        <daisy:DaisyFileInput Variant="Primary" FileName="photo.jpg" HorizontalAlignment="Stretch" />
                        <daisy:DaisyFileInput Variant="Accent" Size="Small" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Input -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="input" Title="Input" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyInput PlaceholderText="Bordered (default)" Variant="Bordered" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput PlaceholderText="Ghost" Variant="Ghost" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput PlaceholderText="Filled" Variant="Filled" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput PlaceholderText="Primary" Variant="Primary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput PlaceholderText="Error" Variant="Error" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                        <TextBlock Text="{Binding [Gallery_DataInput_LabelsHelper]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyInput Label="{Binding [Gallery_DataInput_Email]}"
                                         IsRequired="True"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderEmail]}" />
                        <daisy:DaisyInput Label="{Binding [Gallery_DataInput_Notes]}"
                                         IsOptional="True"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderNotes]}" />
                        <daisy:DaisyInput Label="{Binding [Gallery_DataInput_Password]}"
                                         HelperText="{Binding [Gallery_DataInput_HelperPassword]}"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderPassword]}" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                        <TextBlock Text="{Binding [Gallery_DataInput_FloatingLabel]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyInput Label="{Binding [Gallery_DataInput_Email]}"
                                         LabelPosition="Floating"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderEmail]}" />
                        <daisy:DaisyInput Label="{Binding [Gallery_DataInput_Username]}"
                                         LabelPosition="Floating"
                                         StartIcon="{StaticResource DaisyIconUser}"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderUsername]}" />
                        <daisy:DaisyInput Label="{Binding [Gallery_DataInput_Password]}"
                                         LabelPosition="Floating"
                                         EndIcon="{StaticResource DaisyIconSettings}"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderPassword]}" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                        <TextBlock Text="{Binding [Gallery_DataInput_WithIcons]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyInput StartIcon="{StaticResource DaisyIconHome}"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_Address]}" />
                        <daisy:DaisyInput EndIcon="{StaticResource DaisyIconSearch}"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderSearch]}" />
                        <daisy:DaisyInput StartIcon="{StaticResource DaisyIconUser}"
                                         EndIcon="{StaticResource DaisyIconCheck}"
                                         Variant="Success"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="{Binding [Gallery_DataInput_PlaceholderUsername]}" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyInput Size="ExtraSmall" PlaceholderText="Extra Small" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput Size="Small" PlaceholderText="Small" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput Size="Medium" PlaceholderText="{Binding [Gallery_DataInput_MediumDefault]}" HorizontalAlignment="Stretch" />
                        <daisy:DaisyInput Size="Large" PlaceholderText="Large" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Calendar Date Picker -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="calendar-date-picker" Title="Calendar Date Picker" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="320">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCalendarDatePicker PlaceholderText="Bordered (default)" Variant="Bordered" HorizontalAlignment="Stretch" />
                        <daisy:DaisyCalendarDatePicker PlaceholderText="Ghost" Variant="Ghost" HorizontalAlignment="Stretch" />
                        <daisy:DaisyCalendarDatePicker PlaceholderText="Filled" Variant="Filled" HorizontalAlignment="Stretch" />
                        <daisy:DaisyCalendarDatePicker PlaceholderText="Primary" Variant="Primary" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="320"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyCalendarDatePicker Size="ExtraSmall" PlaceholderText="Extra Small" HorizontalAlignment="Stretch" />
                        <daisy:DaisyCalendarDatePicker Size="Small" PlaceholderText="Small" HorizontalAlignment="Stretch" />
                        <daisy:DaisyCalendarDatePicker Size="Medium" PlaceholderText="{Binding [Gallery_DataInput_MediumDefault]}" HorizontalAlignment="Stretch" />
                        <daisy:DaisyCalendarDatePicker Size="Large" PlaceholderText="Large" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Mask Input -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="mask-input" Title="Mask Input" />
                <TextBlock Text="{Binding [Gallery_DataInput_Description_MaskInput]}"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_WithMask]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <custom:DaisyMaskInput Mode="AlphaNumericCode" HorizontalAlignment="Stretch" />
                        <TextBlock Text="{Binding [Gallery_DataInput_ExampleAlpha]}" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Time]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <custom:DaisyMaskInput Mode="Timer" HorizontalAlignment="Stretch" />
                        <TextBlock Text="{Binding [Gallery_DataInput_ExampleTime]}" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Card]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <custom:DaisyMaskInput Mode="CreditCardNumber"
                                               EndIcon="{StaticResource DaisyIconCard}"
                                               HorizontalAlignment="Stretch" />
                        <TextBlock Text="{Binding [Gallery_DataInput_ExampleCard]}" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Expiry]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <custom:DaisyMaskInput Mode="ExpiryDate" HorizontalAlignment="Stretch" />
                        <TextBlock Text="{Binding [Gallery_DataInput_ExampleExpiry]}" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Cvc]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <custom:DaisyMaskInput Mode="Cvc" HorizontalAlignment="Stretch" />
                        <TextBlock Text="{Binding [Gallery_DataInput_ExampleCvc]}" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- NumericUpDown -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="numericupdown" Title="NumericUpDown" />
                <TextBlock Text="{Binding [Gallery_DataInput_Description_NumericUpDown]}"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Decimal]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyNumericUpDown x:Name="NumericUpDownDecimalDemo"
                                                  HorizontalAlignment="Stretch"
                                                  ShowClearButton="True" />
                        <TextBlock Text="{Binding [Gallery_DataInput_TryExponent]}"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Currency]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyNumericUpDown x:Name="NumericUpDownCurrencyDemo"
                                                  HorizontalAlignment="Stretch"
                                                  Prefix="$"
                                                  FormatString="F2"
                                                  ShowButtons="True" />
                        <TextBlock Text="{Binding [Gallery_DataInput_PrefixFormatting]}"
                                   Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_Bases]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />

                        <StackPanel Spacing="8">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Hex" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyNumericUpDown x:Name="NumericUpDownHexDemo"
                                    Width="180"
                                    HorizontalAlignment="Left"
                                    NumberBase="Hexadecimal"
                                    ShowBasePrefix="True"
                                    HexCase="Upper" />
                            </StackPanel>

                            <StackPanel Spacing="6">
                                <TextBlock Text="Binary" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyNumericUpDown x:Name="NumericUpDownBinaryDemo"
                                    Width="180"
                                    HorizontalAlignment="Left"
                                    NumberBase="Binary"
                                    ShowBasePrefix="True" />
                            </StackPanel>

                            <StackPanel Spacing="6">
                                <TextBlock Text="ColorHex" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <daisy:DaisyNumericUpDown x:Name="NumericUpDownColorHexDemo"
                                        Width="140"
                                        HorizontalAlignment="Left"
                                        NumberBase="ColorHex"
                                        ShowBasePrefix="True"
                                        HexCase="Upper" />
                                    <daisy:DaisyNumericUpDown x:Name="NumericUpDownColorHexLowerDemo"
                                        Width="140"
                                        HorizontalAlignment="Left"
                                        NumberBase="ColorHex"
                                        ShowBasePrefix="True"
                                        HexCase="Lower" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Spacing="6">
                                <TextBlock Text="IPv4" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <daisy:DaisyNumericUpDown x:Name="NumericUpDownIpv4Demo"
                                    Width="180"
                                    HorizontalAlignment="Left"
                                    NumberBase="IPAddress" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="360">
                        <TextBlock Text="{Binding [Gallery_DataInput_VariantsSizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <StackPanel Spacing="10" daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                            <daisy:DaisyNumericUpDown x:Name="NumericUpDownVariantSmall" HorizontalAlignment="Stretch" Size="Small" Variant="Bordered" />
                            <daisy:DaisyNumericUpDown x:Name="NumericUpDownVariantMedium" HorizontalAlignment="Stretch" Size="Medium" Variant="Ghost" ShowButtons="False" />
                            <daisy:DaisyNumericUpDown x:Name="NumericUpDownVariantLarge" HorizontalAlignment="Stretch" Size="Large" Variant="Primary" />
                        </StackPanel>
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- OTP Input -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="otpinput" Title="OTP Input" />
                <TextBlock
                    Text="{Binding [Gallery_DataInput_Description_OtpInput]}"
                    Opacity="0.7"
                    TextWrapping="Wrap"
                    Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="32">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding [Gallery_DataInput_6Digits]}" FontWeight="SemiBold"
                            Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyOtpInput Length="6" SeparatorInterval="3" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding [Gallery_DataInput_4Digits]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyOtpInput Length="4" IsJoined="False" />
                    </StackPanel>

                    <StackPanel Spacing="8"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_SizesJoined]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyOtpInput Length="4" Size="ExtraSmall" />
                        <daisy:DaisyOtpInput Length="4" Size="Small" />
                        <daisy:DaisyOtpInput Length="4" Size="Medium" />
                        <daisy:DaisyOtpInput Length="4" Size="Large" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Radio -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="radio" Title="Radio" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="180">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRadio Content="Default" GroupName="RadioDemo1" />
                        <daisy:DaisyRadio Content="Primary" Variant="Primary" GroupName="RadioDemo1" IsChecked="True" />
                        <daisy:DaisyRadio Content="Secondary" Variant="Secondary" GroupName="RadioDemo2" IsChecked="True" />
                        <daisy:DaisyRadio Content="Success" Variant="Success" GroupName="RadioDemo3" IsChecked="True" />
                        <daisy:DaisyRadio Content="Warning" Variant="Warning" GroupName="RadioDemo4" IsChecked="True" />
                        <daisy:DaisyRadio Content="Error" Variant="Error" GroupName="RadioDemo5" IsChecked="True" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="180"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRadio Content="Extra Small" Size="ExtraSmall" Variant="Primary" GroupName="RadioSizes" />
                        <daisy:DaisyRadio Content="Small" Size="Small" Variant="Primary" GroupName="RadioSizes" />
                        <daisy:DaisyRadio Content="Medium" Size="Medium" Variant="Primary" GroupName="RadioSizes" IsChecked="True" />
                        <daisy:DaisyRadio Content="Large" Size="Large" Variant="Primary" GroupName="RadioSizes" />
                        <daisy:DaisyRadio Content="Extra Large" Size="ExtraLarge" Variant="Primary" GroupName="RadioSizes" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Range -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="range" Title="Range" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="300">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRange Value="40" Variant="Default" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="50" Variant="Primary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="60" Variant="Secondary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="70" Variant="Accent" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="80" Variant="Success" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="300"
                        daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRange Value="50" Size="ExtraSmall" Variant="Primary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="50" Size="Small" Variant="Primary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="50" Size="Medium" Variant="Primary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyRange Value="50" Size="Large" Variant="Primary" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Rating -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="rating" Title="Rating" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="180">
                        <TextBlock Text="{Binding [Gallery_DataInput_StarRatings]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRating Value="3" Maximum="5" FilledColor="Warning" />
                        <daisy:DaisyRating Value="4" Maximum="5" FilledColor="Primary" />
                        <daisy:DaisyRating Value="2.5" Maximum="5" FilledColor="Success"
                            Precision="Half" />
                        <daisy:DaisyRating Value="3.5" Maximum="5" FilledColor="Secondary"
                            Precision="Half" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="180"
                        daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRating Value="4" Size="ExtraSmall" />
                        <daisy:DaisyRating Value="4" Size="Small" />
                        <daisy:DaisyRating Value="4" Size="Medium" />
                        <daisy:DaisyRating Value="4" Size="Large" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="180">
                        <TextBlock Text="{Binding [Gallery_DataInput_ReadOnly]}" FontWeight="SemiBold" Opacity="0.8"
                            Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyRating Value="3.5" Maximum="5" IsReadOnly="True"
                            FilledColor="Accent" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="select" Title="Select" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="320">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySelect PlaceholderText="Bordered (default)" HorizontalAlignment="Stretch">
                            <x:String>Apple</x:String>
                            <x:String>Banana</x:String>
                            <x:String>Cherry</x:String>
                        </daisy:DaisySelect>
                        <daisy:DaisySelect Variant="Ghost" PlaceholderText="Ghost" HorizontalAlignment="Stretch">
                            <x:String>Option 1</x:String>
                            <x:String>Option 2</x:String>
                        </daisy:DaisySelect>
                        <daisy:DaisySelect Variant="Primary" PlaceholderText="Primary" HorizontalAlignment="Stretch">
                            <x:String>Option 1</x:String>
                            <x:String>Option 2</x:String>
                        </daisy:DaisySelect>
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="320"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySelect Size="ExtraSmall" PlaceholderText="Extra Small" HorizontalAlignment="Stretch">
                            <x:String>XS</x:String>
                            <x:String>...</x:String>
                        </daisy:DaisySelect>
                        <daisy:DaisySelect Size="Small" PlaceholderText="Small" HorizontalAlignment="Stretch">
                            <x:String>S</x:String>
                            <x:String>...</x:String>
                        </daisy:DaisySelect>
                        <daisy:DaisySelect Size="Medium" PlaceholderText="Medium" HorizontalAlignment="Stretch">
                            <x:String>M</x:String>
                            <x:String>...</x:String>
                        </daisy:DaisySelect>
                        <daisy:DaisySelect Size="Large" PlaceholderText="Large" HorizontalAlignment="Stretch">
                            <x:String>L</x:String>
                            <x:String>...</x:String>
                        </daisy:DaisySelect>
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Slide to Confirm -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="slide-to-confirm" Title="Slide to Confirm" />
                <TextBlock Text="{Binding [Gallery_DataInput_Description_SlideToConfirm]}"
                           Opacity="0.7" FontSize="12"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="220">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySlideToConfirm
                            Text="{Binding [Gallery_DataInput_PowerOff]}"
                            ConfirmingText="{Binding [Gallery_DataInput_PoweringOff]}"
                            Variant="Primary" AutoReset="True"
                            SlideCompleted="OnSlideCompleted" />

                        <daisy:DaisySlideToConfirm
                            Text="{Binding [Gallery_DataInput_PowerOff]}"
                            ConfirmingText="{Binding [Gallery_DataInput_Confirmed]}"
                            Variant="Success" AutoReset="True"
                            SlideCompleted="OnSlideCompleted" />

                        <daisy:DaisySlideToConfirm
                            Text="{Binding [Gallery_DataInput_Delete]}"
                            ConfirmingText="{Binding [Gallery_DataInput_Deleting]}"
                            Variant="Error" AutoReset="True"
                            SlideCompleted="OnSlideCompleted" />

                        <daisy:DaisySlideToConfirm
                            Text="{Binding [Gallery_DataInput_Unlock]}"
                            ConfirmingText="{Binding [Gallery_DataInput_Unlocked]}"
                            Variant="Info" AutoReset="True"
                            SlideCompleted="OnSlideCompleted" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySlideToConfirm Size="ExtraSmall" Variant="Primary" AutoReset="True"
                            Text="SLIDE" ConfirmingText="OK" />
                        <daisy:DaisySlideToConfirm Size="Small" Variant="Primary" AutoReset="True"
                            Text="SLIDE" ConfirmingText="OK" />
                        <daisy:DaisySlideToConfirm Size="Medium" Variant="Primary" AutoReset="True"
                            Text="SLIDE TO CONFIRM" ConfirmingText="CONFIRMED" />
                        <daisy:DaisySlideToConfirm Size="Large" Variant="Primary" AutoReset="True"
                            Text="SLIDE TO CONFIRM" ConfirmingText="CONFIRMED" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220">
                        <TextBlock Text="Depth Styles" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisySlideToConfirm Variant="Success" DepthStyle="Flat" AutoReset="True"
                            Text="FLAT" ConfirmingText="CONFIRMED" />
                        <daisy:DaisySlideToConfirm Variant="Success" DepthStyle="ThreeDimensional" AutoReset="True"
                            Text="3D EFFECT" ConfirmingText="CONFIRMED" />
                        <daisy:DaisySlideToConfirm Variant="Success" DepthStyle="Raised" AutoReset="True"
                            Text="RAISED" ConfirmingText="CONFIRMED" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- PasswordBox -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="passwordbox" Title="PasswordBox" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPasswordBox PlaceholderText="Bordered (default)" Variant="Bordered" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox PlaceholderText="Ghost" Variant="Ghost" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox PlaceholderText="Filled" Variant="Filled" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox PlaceholderText="Primary" Variant="Primary" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox PlaceholderText="Error" Variant="Error" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                        <TextBlock Text="Floating Labels &amp; Icons" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPasswordBox Label="Password"
                                         LabelPosition="Floating"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="Enter password" />
                        <daisy:DaisyPasswordBox Label="Secret Key"
                                         LabelPosition="Floating"
                                         StartIconData="{StaticResource DaisyIconSettings}"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="Enter key" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_Sizes]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPasswordBox Size="ExtraSmall" PlaceholderText="Extra Small" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox Size="Small" PlaceholderText="Small" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox Size="Medium" PlaceholderText="Medium (default)" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox Size="Large" PlaceholderText="Large" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="220" MaxWidth="420">
                         <TextBlock Text="Customization" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPasswordBox PasswordChar="*" PlaceholderText="Custom mask char (*)" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox IsPasswordRevealButtonEnabled="False" PlaceholderText="Reveal button disabled" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox Label="Required" IsRequired="True" PlaceholderText="Required field" HorizontalAlignment="Stretch" />
                        <daisy:DaisyPasswordBox Label="Optional" IsOptional="True" PlaceholderText="Optional field" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Tag Picker -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="tagpicker" Title="Tag Picker" />
                <TextBlock Text="{Binding [Gallery_DataInput_Description_TagPicker]}"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="420">
                        <TextBlock Text="Selection (default)" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTagPicker x:Name="TagPicker"
                                              Title="{Binding [Gallery_DataInput_SelectedTags]}" />
                    </StackPanel>

                    <StackPanel Spacing="8" MinWidth="320" MaxWidth="420">
                        <TextBlock Text="Library mode" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTagPicker x:Name="TagPickerLibrary"
                                              Mode="Library"
                                              Title="{Binding [Gallery_DataInput_SelectedTags]}" />
                        <daisy:DaisyButton Content="Reset"
                                           ButtonStyle="Outline"
                                           HorizontalAlignment="Left"
                                           Click="OnTagPickerLibraryReset" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- TextArea -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="textarea" Title="TextArea" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="8" Width="320">
                        <TextBlock Text="{Binding [Gallery_DataInput_BasicTextArea]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTextArea PlaceholderText="{Binding [Gallery_DataInput_PlaceholderMessage]}" MinRows="3" />
                    </StackPanel>

                    <StackPanel Spacing="8" Width="320">
                        <TextBlock Text="{Binding [Gallery_DataInput_PrimaryVariant]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTextArea PlaceholderText="Primary variant" Variant="Primary" MinRows="3" />
                    </StackPanel>

                    <StackPanel Spacing="8" Width="320">
                        <TextBlock Text="{Binding [Gallery_DataInput_AutoGrow]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTextArea PlaceholderText="{Binding [Gallery_DataInput_TypeToExpand]}" IsAutoGrow="True" MinRows="2" MaxRows="8" />
                    </StackPanel>

                    <StackPanel Spacing="8" Width="320">
                        <TextBlock Text="{Binding [Gallery_DataInput_CharacterCount]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyTextArea PlaceholderText="{Binding [Gallery_DataInput_TypeHere]}" ShowCharacterCount="True" MaxLength="200" MinRows="3" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Toggle -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="toggle" Title="Toggle" />

                <daisy:WrapPanel Spacing="24">
                    <StackPanel Spacing="10" MinWidth="180">
                        <TextBlock Text="{Binding [Gallery_DataInput_Variants]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyToggle Header="Default" IsOn="True" />
                        <daisy:DaisyToggle Header="Primary" Variant="Primary" IsOn="True" />
                        <daisy:DaisyToggle Header="Secondary" Variant="Secondary" IsOn="True" />
                        <daisy:DaisyToggle Header="Success" Variant="Success" IsOn="True" />
                    </StackPanel>

                    <StackPanel Spacing="10" MinWidth="180"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <TextBlock Text="{Binding [Gallery_DataInput_SizesPadding]}" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyToggle Header="Extra Small" Size="ExtraSmall" Variant="Info" IsOn="True" />
                        <daisy:DaisyToggle Header="Small" Size="Small" Variant="Info" IsOn="True" />
                        <daisy:DaisyToggle Header="Medium" Size="Medium" Variant="Info" IsOn="True" />
                        <daisy:DaisyToggle Header="Large" Size="Large" Variant="Info" IsOn="True" />
                        <daisy:DaisyToggle Header="Tight Padding (1)" Variant="Warning" TogglePadding="1" IsOn="True" />
                        <daisy:DaisyToggle Header="Loose Padding (4)" Variant="Warning" TogglePadding="4" IsOn="True" />
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</local:ScrollableExamplePage>
