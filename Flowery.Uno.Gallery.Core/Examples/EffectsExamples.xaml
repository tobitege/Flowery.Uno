<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.EffectsExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:fx="using:Flowery.Effects"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True" Background="Transparent" Padding="0,0,0,32">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="reveal" Title="Reveal" />
                <TextBlock Text="Fade/slide/scale an element into view. Auto-runs on load; can be replayed programmatically."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:DaisyButton Content="Replay reveal demos"
                                   Variant="Ghost"
                                   Size="Small"
                                   HorizontalAlignment="Left"
                                   Click="ReplayReveal_Click" />

                <daisy:WrapPanel Spacing="8">
                    <Border x:Name="RevealDemo"
                            Width="280"
                            Background="{ThemeResource DaisyPrimaryBrush}"
                            CornerRadius="8"
                            Padding="12"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Mode="FadeReveal"
                            fx:RevealBehavior.Duration="0:0:0.6"
                            fx:RevealBehavior.Direction="Bottom"
                            fx:RevealBehavior.Distance="30">
                        <TextBlock Text="FadeReveal"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisyPrimaryContentBrush}"
                                   FontWeight="SemiBold" />
                    </Border>

                    <Border x:Name="SlideInDemo"
                            Width="280"
                            Background="{ThemeResource DaisySecondaryBrush}"
                            CornerRadius="8"
                            Padding="12"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Mode="SlideIn"
                            fx:RevealBehavior.Duration="0:0:0.8"
                            fx:RevealBehavior.Direction="Left"
                            fx:RevealBehavior.Distance="80">
                        <TextBlock Text="SlideIn"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisySecondaryContentBrush}"
                                   FontWeight="SemiBold" />
                    </Border>

                    <Border x:Name="FadeOnlyDemo"
                            Width="280"
                            Background="{ThemeResource DaisyAccentBrush}"
                            CornerRadius="8"
                            Padding="12"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Mode="FadeOnly"
                            fx:RevealBehavior.Duration="0:0:0.8">
                        <TextBlock Text="FadeOnly"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisyAccentContentBrush}"
                                   FontWeight="SemiBold" />
                    </Border>

                    <Border x:Name="ScaleDemo"
                            Width="280"
                            Background="{ThemeResource DaisyInfoBrush}"
                            CornerRadius="8"
                            Padding="12"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Mode="Scale"
                            fx:RevealBehavior.Duration="0:0:0.5">
                        <TextBlock Text="Scale"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisyInfoContentBrush}"
                                   FontWeight="SemiBold" />
                    </Border>

                    <Border x:Name="ScaleSlideDemo"
                            Width="280"
                            Background="{ThemeResource DaisySuccessBrush}"
                            CornerRadius="8"
                            Padding="12"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Mode="ScaleSlide"
                            fx:RevealBehavior.Duration="0:0:0.6"
                            fx:RevealBehavior.Direction="Bottom"
                            fx:RevealBehavior.Distance="40">
                        <TextBlock Text="ScaleSlide"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisySuccessContentBrush}"
                                   FontWeight="SemiBold" />
                    </Border>
                </daisy:WrapPanel>

                <TextBlock Text="Directions" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel x:Name="RevealDirections" Spacing="8">
                    <Border Background="{ThemeResource DaisyBase200Brush}"
                            CornerRadius="8"
                            Padding="10"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Direction="Top"
                            fx:RevealBehavior.Distance="28">
                        <TextBlock Text="Top" Foreground="{ThemeResource DaisyBaseContentBrush}" Opacity="0.9"/>
                    </Border>
                    <Border Background="{ThemeResource DaisyBase200Brush}"
                            CornerRadius="8"
                            Padding="10"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Direction="Left"
                            fx:RevealBehavior.Distance="28">
                        <TextBlock Text="Left" Foreground="{ThemeResource DaisyBaseContentBrush}" Opacity="0.9"/>
                    </Border>
                    <Border Background="{ThemeResource DaisyBase200Brush}"
                            CornerRadius="8"
                            Padding="10"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Direction="Right"
                            fx:RevealBehavior.Distance="28">
                        <TextBlock Text="Right" Foreground="{ThemeResource DaisyBaseContentBrush}" Opacity="0.9"/>
                    </Border>
                    <Border Background="{ThemeResource DaisyBase200Brush}"
                            CornerRadius="8"
                            Padding="10"
                            fx:RevealBehavior.IsEnabled="True"
                            fx:RevealBehavior.Direction="Bottom"
                            fx:RevealBehavior.Distance="28">
                        <TextBlock Text="Bottom" Foreground="{ThemeResource DaisyBaseContentBrush}" Opacity="0.9"/>
                    </Border>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="scramble" Title="Scramble" />
                <TextBlock Text="Scramble/reveal text on hover or click. Great for headings and teaser effects."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="12" Padding="18" MaxWidth="520">
                    <StackPanel Spacing="14">
                        <TextBlock x:Name="ScrambleDemo1"
                                   Text="Hover to reveal (default)."
                                   FontSize="20" FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisyPrimaryBrush}"
                                   fx:ScrambleHoverBehavior.IsEnabled="True"
                                   fx:ScrambleHoverBehavior.Duration="0:0:0.5" />
                        <TextBlock x:Name="ScrambleDemo2"
                                   Text="Custom scramble chars: ▓▒░█▌▐"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisySecondaryBrush}"
                                   fx:ScrambleHoverBehavior.IsEnabled="True"
                                   fx:ScrambleHoverBehavior.ScrambleChars="▓▒░█▌▐"
                                   fx:ScrambleHoverBehavior.Duration="0:0:0.8" />
                        <TextBlock x:Name="ScrambleDemo3"
                                   Text="Numeric reveal: 0123456789"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisyAccentBrush}"
                                   fx:ScrambleHoverBehavior.IsEnabled="True"
                                   fx:ScrambleHoverBehavior.ScrambleChars="0123456789"
                                   fx:ScrambleHoverBehavior.Duration="0:0:0.6" />
                        <TextBlock x:Name="ScrambleDemo4"
                                   Text="Split-flap reveal (slow)."
                                   FontSize="18" FontWeight="Bold"
                                   FontFamily="Consolas,Courier New,monospace"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource DaisyWarningBrush}"
                                   fx:ScrambleHoverBehavior.IsEnabled="True"
                                   fx:ScrambleHoverBehavior.RevealStyle="SplitFlap"
                                   fx:ScrambleHoverBehavior.Duration="0:0:2.5" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="wave" Title="Wave" />
                <TextBlock Text="Wave text vertically. Supports whole-text or per-character wave."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="12" Padding="18" MaxWidth="520">
                    <StackPanel Spacing="14" HorizontalAlignment="Center">
                        <fx:WaveText Text="Per-character wave"
                                     IsPerCharacter="True"
                                     FontSize="22"
                                     FontWeight="Bold"
                                     Foreground="{ThemeResource DaisyPrimaryBrush}"
                                     Amplitude="8"
                                     Duration="0:0:1"
                                     StaggerDelay="0:0:0.05" />
                        <TextBlock x:Name="WaveDemo2"
                                   Text="Whole-text wave"
                                   FontSize="18"
                                   Foreground="{ThemeResource DaisySecondaryBrush}"
                                   fx:WaveTextBehavior.IsEnabled="True"
                                   fx:WaveTextBehavior.Amplitude="3"
                                   fx:WaveTextBehavior.Duration="0:0:2" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="typewriter" Title="Typewriter" />
                <TextBlock Text="Types text one character at a time. Useful for terminal/log-style UIs."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:DaisyButton Content="Replay typewriter"
                                   Variant="Ghost"
                                   Size="Small"
                                   HorizontalAlignment="Left"
                                   Click="ReplayTypewriter_Click" />

                <Border Background="#1a1a1a" CornerRadius="12" Padding="18" BorderBrush="#333" BorderThickness="1" MaxWidth="640">
                    <StackPanel Spacing="8">
                        <TextBlock Text="TERMINAL v1.0.4" Foreground="#666" FontSize="10" FontWeight="Bold" />
                        <TextBlock x:Name="TypewriterDemo"
                                   Text="C:\> flowery --init&#x0a;Initializing Flowery.Uno...&#x0a;Loading DaisyUI tokens...&#x0a;Applying modern transitions...&#x0a;Ready."
                                   Foreground="#4ade80"
                                   FontFamily="Consolas,Courier New,monospace"
                                   FontSize="14"
                                   LineHeight="24"
                                   fx:TypewriterBehavior.IsEnabled="True"
                                   fx:TypewriterBehavior.Speed="0:0:0.03" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="cursor-follow" Title="Cursor Follow" />
                <TextBlock Text="A springy follower that tracks the cursor (or a programmatic target)."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="8">
                    <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="12" Padding="10" Width="220">
                        <Grid MinHeight="84"
                              Background="Transparent"
                              fx:CursorFollowBehavior.IsEnabled="True"
                              fx:CursorFollowBehavior.FollowerSize="20"
                              fx:CursorFollowBehavior.FollowerBrush="{ThemeResource DaisyPrimaryBrush}"
                              fx:CursorFollowBehavior.FollowerShape="Circle"
                              fx:CursorFollowBehavior.FollowerOpacity="1.0">
                            <TextBlock Text="Circle"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0.6"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </Grid>
                    </Border>

                    <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="12" Padding="10" Width="220">
                        <Grid MinHeight="84"
                              Background="Transparent"
                              fx:CursorFollowBehavior.IsEnabled="True"
                              fx:CursorFollowBehavior.FollowerSize="24"
                              fx:CursorFollowBehavior.FollowerBrush="{ThemeResource DaisySecondaryBrush}"
                              fx:CursorFollowBehavior.FollowerShape="Square"
                              fx:CursorFollowBehavior.FollowerOpacity="0.75">
                            <TextBlock Text="Square"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0.6"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </Grid>
                    </Border>

                    <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="12" Padding="10" Width="220">
                        <Grid MinHeight="84"
                              Background="Transparent"
                              fx:CursorFollowBehavior.IsEnabled="True"
                              fx:CursorFollowBehavior.FollowerSize="28"
                              fx:CursorFollowBehavior.FollowerBrush="{ThemeResource DaisyAccentBrush}"
                              fx:CursorFollowBehavior.FollowerShape="Ring"
                              fx:CursorFollowBehavior.FollowerOpacity="0.55">
                            <TextBlock Text="Ring"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0.6"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </Grid>
                    </Border>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="showcase" Title="Showcase" />
                <TextBlock Text="Combined demo used for GIF/video capture."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:DaisyCard MaxWidth="520" Padding="18">
                    <StackPanel Spacing="18">
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="RevealShowcaseLabel"
                                       Text="Reveal: FadeReveal (Bottom)"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource DaisyPrimaryBrush}" />
                            <Border x:Name="RevealShowcaseDemo"
                                    Background="{ThemeResource DaisyPrimaryBrush}"
                                    CornerRadius="10"
                                    Padding="14"
                                    fx:RevealBehavior.IsEnabled="True"
                                    fx:RevealBehavior.ManualTriggerOnly="True">
                                <TextBlock Text="Hello from Reveal"
                                           HorizontalAlignment="Center"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource DaisyPrimaryContentBrush}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock x:Name="ScrambleShowcaseLabel"
                                       Text="Scramble: (also hover)"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource DaisySecondaryBrush}" />
                            <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="10" Padding="14">
                                <TextBlock x:Name="ScrambleShowcaseDemo"
                                           Text="SCRAMBLE SHOWCASE"
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           fx:ScrambleHoverBehavior.IsEnabled="True"
                                           fx:ScrambleHoverBehavior.ScrambleChars="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                           fx:ScrambleHoverBehavior.Duration="0:0:0.8" />
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Wave"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource DaisyAccentBrush}" />
                            <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="10" Padding="14">
                                <fx:WaveText Text="WAVE"
                                             IsPerCharacter="True"
                                             HorizontalAlignment="Center"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             Foreground="{ThemeResource DaisyAccentBrush}"
                                             Amplitude="6"
                                             Duration="0:0:1.5"
                                             StaggerDelay="0:0:0.04" />
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock x:Name="CursorFollowShowcaseLabel"
                                       Text="Cursor Follow: Ring ∞"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource DaisyInfoBrush}" />
                            <Border Background="{ThemeResource DaisyBase200Brush}" CornerRadius="10" Padding="10">
                                <Grid x:Name="CursorFollowShowcasePanel"
                                      MinHeight="70"
                                      Background="Transparent"
                                      fx:CursorFollowBehavior.IsEnabled="True"
                                      fx:CursorFollowBehavior.FollowerSize="16"
                                      fx:CursorFollowBehavior.FollowerBrush="{ThemeResource DaisyInfoBrush}"
                                      fx:CursorFollowBehavior.FollowerShape="Ring"
                                      fx:CursorFollowBehavior.FollowerOpacity="0.8">
                                    <TextBlock Text="(moves on hover / autoplay)"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Opacity="0.6"
                                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <daisy:DaisyButton x:Name="StartShowcaseBtn"
                                           Content="Start showcase"
                                           Variant="Primary"
                                           Size="Small"
                                           HorizontalAlignment="Left"
                                           Click="StartShowcase_Click" />
                    </StackPanel>
                </daisy:DaisyCard>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</local:ScrollableExamplePage>
