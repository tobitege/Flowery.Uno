<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.FeedbackExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:helpers="using:Flowery.Helpers"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True" Background="Transparent" Padding="0,0,0,32">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="alert" Title="Alert" />

                <StackPanel Spacing="12" MaxWidth="600" HorizontalAlignment="Left">
                    <daisy:DaisyAlert Variant="Info">
                        <TextBlock Text="Info: This is an informational message." />
                    </daisy:DaisyAlert>
                    <daisy:DaisyAlert Variant="Success">
                        <TextBlock Text="Success: Your operation completed successfully!" />
                    </daisy:DaisyAlert>
                    <daisy:DaisyAlert Variant="Warning">
                        <TextBlock Text="Warning: Please review before proceeding." />
                    </daisy:DaisyAlert>
                    <daisy:DaisyAlert Variant="Error">
                        <TextBlock Text="Error: Something went wrong." />
                    </daisy:DaisyAlert>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="loading" Title="Loading" />

                <TextBlock Text="Basic Variants" FontWeight="SemiBold" Opacity="0.8"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Spacing="16">
                    <daisy:DaisyLoading Variant="Spinner" />
                    <daisy:DaisyLoading Variant="Dots" />
                    <daisy:DaisyLoading Variant="Ring" />
                    <daisy:DaisyLoading Variant="Pulse" />
                    <daisy:DaisyLoading Variant="Ball" />
                    <daisy:DaisyLoading Variant="Bars" />
                    <daisy:DaisyLoading Variant="Infinity" />
                    <daisy:DaisyLoading Variant="Orbit" />
                    <daisy:DaisyLoading Variant="Snake" />
                    <daisy:DaisyLoading Variant="Wave" />
                    <daisy:DaisyLoading Variant="Bounce" />
                    <daisy:DaisyLoading Variant="Matrix" />
                    <daisy:DaisyLoading Variant="MatrixInward" />
                    <daisy:DaisyLoading Variant="MatrixOutward" />
                    <daisy:DaisyLoading Variant="MatrixVertical" />
                    <daisy:DaisyLoading Variant="MatrixRain" />
                    <daisy:DaisyLoading Variant="Hourglass" />
                    <daisy:DaisyLoading Variant="SignalSweep" />
                    <daisy:DaisyLoading Variant="BitFlip" />
                    <daisy:DaisyLoading Variant="PacketBurst" />
                    <daisy:DaisyLoading Variant="CometTrail" />
                    <daisy:DaisyLoading Variant="Heartbeat" />
                    <daisy:DaisyLoading Variant="TunnelZoom" />
                    <daisy:DaisyLoading Variant="GlitchReveal" />
                    <daisy:DaisyLoading Variant="RippleMatrix" />
                    <daisy:DaisyLoading Variant="CursorBlink" />
                    <daisy:DaisyLoading Variant="CountdownSpinner" />
                </daisy:WrapPanel>

                <TextBlock Text="Random (colors rotate every 2 cycles)" FontWeight="SemiBold" Opacity="0.8" Margin="0,16,0,0"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel x:Name="RandomLoadersPanel" Spacing="16" />

                <TextBlock Text="Business (48px)" FontWeight="SemiBold" Opacity="0.8" Margin="0,16,0,0"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Spacing="10">
                    <daisy:DaisyLoading Variant="DocumentFlipOn" PixelSize="48" />
                    <daisy:DaisyLoading Variant="DocumentFlipOff" PixelSize="48" />
                    <daisy:DaisyLoading Variant="MailSend" PixelSize="48" />
                    <daisy:DaisyLoading Variant="CloudUpload" PixelSize="48" />
                    <daisy:DaisyLoading Variant="CloudDownload" PixelSize="48" />
                    <daisy:DaisyLoading Variant="InvoiceStamp" PixelSize="48" />
                    <daisy:DaisyLoading Variant="ChartPulse" PixelSize="48" />
                    <daisy:DaisyLoading Variant="CalendarTick" PixelSize="48" />
                    <daisy:DaisyLoading Variant="ApprovalFlow" PixelSize="48" />
                    <daisy:DaisyLoading Variant="BriefcaseSpin" PixelSize="48" />
                </daisy:WrapPanel>

                <TextBlock Text="Battery + Traffic Lights (48px)" FontWeight="SemiBold" Opacity="0.8" Margin="0,16,0,0"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Spacing="10">
                    <daisy:DaisyLoading Variant="BatteryCharging" PixelSize="48" />
                    <daisy:DaisyLoading Variant="BatteryEmptying" PixelSize="48" />
                    <daisy:DaisyLoading Variant="TrafficLightUp" PixelSize="48" />
                    <daisy:DaisyLoading Variant="TrafficLightDown" PixelSize="48" />
                    <daisy:DaisyLoading Variant="TrafficLightRight" PixelSize="48" />
                    <daisy:DaisyLoading Variant="TrafficLightLeft" PixelSize="48" />
                </daisy:WrapPanel>

                <TextBlock Text="Win95 Retro (48px)" FontWeight="SemiBold" Opacity="0.8" Margin="0,16,0,0"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <daisy:WrapPanel Spacing="10">
                    <daisy:DaisyLoading Variant="Win95FileCopy" PixelSize="48" />
                    <daisy:DaisyLoading Variant="Win95Search" PixelSize="48" />
                    <daisy:DaisyLoading Variant="Win95Delete" PixelSize="48" />
                    <daisy:DaisyLoading Variant="Win95EmptyRecycle" PixelSize="48" />
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="progress" Title="Progress (Linear)" />

                <StackPanel Spacing="16" MaxWidth="400" HorizontalAlignment="Left">
                    <TextBlock Text="Variants" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyProgress Value="40" Variant="Default" />
                    <daisy:DaisyProgress Value="50" Variant="Primary" />
                    <daisy:DaisyProgress Value="60" Variant="Secondary" />
                    <daisy:DaisyProgress Value="70" Variant="Accent" />
                    <daisy:DaisyProgress Value="80" Variant="Success" />
                    <daisy:DaisyProgress Value="90" Variant="Warning" />
                    <daisy:DaisyProgress Value="100" Variant="Error" />

                    <TextBlock Text="Sizes" FontWeight="SemiBold" Opacity="0.8" Margin="0,12,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}"
                               daisy:FlowerySizeManager.IgnoreGlobalSize="True" />
                    <StackPanel Spacing="8" daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <daisy:DaisyProgress Value="60" Size="ExtraSmall" Variant="Primary" />
                        <daisy:DaisyProgress Value="60" Size="Small" Variant="Primary" />
                        <daisy:DaisyProgress Value="60" Size="Medium" Variant="Primary" />
                        <daisy:DaisyProgress Value="60" Size="Large" Variant="Primary" />
                    </StackPanel>

                    <TextBlock Text="Shimmer (Breathing Animation)" FontWeight="SemiBold" Opacity="0.8" Margin="0,12,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Spacing="8">
                        <daisy:DaisyProgress Value="70" Variant="Primary" Shimmer="True" />
                        <daisy:DaisyProgress Value="80" Variant="Success" Shimmer="True" />
                        <daisy:DaisyProgress Value="60" Variant="Warning" Shimmer="True" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="radial-progress" Title="Radial Progress" />
                <TextBlock Text="Circular progress indicator with size + variant styling."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="16">
                    <TextBlock Text="Variants" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:WrapPanel Spacing="16">
                        <daisy:DaisyRadialProgress Value="25" Variant="Default" />
                        <daisy:DaisyRadialProgress Value="40" Variant="Primary" />
                        <daisy:DaisyRadialProgress Value="55" Variant="Secondary" />
                        <daisy:DaisyRadialProgress Value="70" Variant="Accent" />
                        <daisy:DaisyRadialProgress Value="85" Variant="Success" />
                        <daisy:DaisyRadialProgress Value="95" Variant="Warning" />
                        <daisy:DaisyRadialProgress Value="100" Variant="Error" />
                    </daisy:WrapPanel>

                    <TextBlock Text="Sizes" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}"
                               daisy:FlowerySizeManager.IgnoreGlobalSize="True" />
                    <daisy:WrapPanel Spacing="16"
                                     daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <daisy:DaisyRadialProgress Value="60" Size="ExtraSmall" Variant="Primary" />
                        <daisy:DaisyRadialProgress Value="70" Size="Small" Variant="Primary" />
                        <daisy:DaisyRadialProgress Value="80" Size="Medium" Variant="Primary" />
                        <daisy:DaisyRadialProgress Value="90" Size="Large" Variant="Primary" />
                        <daisy:DaisyRadialProgress Value="100" Size="ExtraLarge" Variant="Primary" />
                    </daisy:WrapPanel>

                    <TextBlock Text="Shimmer (Breathing Animation)" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:WrapPanel Spacing="16">
                        <daisy:DaisyRadialProgress Value="75" Variant="Primary" Shimmer="True" />
                        <daisy:DaisyRadialProgress Value="85" Variant="Success" Shimmer="True" />
                        <daisy:DaisyRadialProgress Value="65" Variant="Warning" Shimmer="True" />
                    </daisy:WrapPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="skeleton" Title="Skeleton" />
                <TextBlock Text="Loading placeholders with pulsing animation. Use to indicate content is loading."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="16">
                    <TextBlock Text="Basic Shapes" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <daisy:DaisySkeleton Height="32" Width="32" CornerRadius="16" />
                        <daisy:DaisySkeleton Height="32" Width="32" CornerRadius="4" />
                        <daisy:DaisySkeleton Height="32" Width="64" CornerRadius="4" />
                        <daisy:DaisySkeleton Height="24" Width="80" CornerRadius="12" />
                    </StackPanel>

                    <TextBlock Text="Text Lines" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Spacing="8" MaxWidth="300" HorizontalAlignment="Left">
                        <daisy:DaisySkeleton Height="20" CornerRadius="4" />
                        <daisy:DaisySkeleton Height="20" Width="240" CornerRadius="4" />
                        <daisy:DaisySkeleton Height="20" Width="180" CornerRadius="4" />
                    </StackPanel>

                    <TextBlock Text="Avatar + Text (Profile Card)" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <daisy:DaisySkeleton Width="48" Height="48" CornerRadius="24" />
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <daisy:DaisySkeleton Height="16" Width="100" CornerRadius="4" />
                            <daisy:DaisySkeleton Height="12" Width="140" CornerRadius="4" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Content Card Skeleton" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <Border Background="{ThemeResource DaisyBase200Brush}"
                            CornerRadius="12"
                            Padding="16"
                            MaxWidth="320"
                            HorizontalAlignment="Left">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <daisy:DaisySkeleton Width="40" Height="40" CornerRadius="20" />
                                <StackPanel Spacing="6" VerticalAlignment="Center">
                                    <daisy:DaisySkeleton Height="14" Width="80" CornerRadius="4" />
                                    <daisy:DaisySkeleton Height="10" Width="60" CornerRadius="4" />
                                </StackPanel>
                            </StackPanel>
                            <daisy:DaisySkeleton Height="120" CornerRadius="8" />
                            <StackPanel Spacing="6">
                                <daisy:DaisySkeleton Height="14" CornerRadius="4" />
                                <daisy:DaisySkeleton Height="14" Width="200" CornerRadius="4" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="List Items Skeleton" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Spacing="12" MaxWidth="400" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <daisy:DaisySkeleton Width="44" Height="44" CornerRadius="8" />
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <daisy:DaisySkeleton Height="14" Width="150" CornerRadius="4" />
                                <daisy:DaisySkeleton Height="10" Width="100" CornerRadius="4" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <daisy:DaisySkeleton Width="44" Height="44" CornerRadius="8" />
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <daisy:DaisySkeleton Height="14" Width="180" CornerRadius="4" />
                                <daisy:DaisySkeleton Height="10" Width="120" CornerRadius="4" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <daisy:DaisySkeleton Width="44" Height="44" CornerRadius="8" />
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <daisy:DaisySkeleton Height="14" Width="130" CornerRadius="4" />
                                <daisy:DaisySkeleton Height="10" Width="90" CornerRadius="4" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Text Mode (Pulsing Text)" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Spacing="8">
                        <daisy:DaisySkeleton IsTextMode="True">
                            <TextBlock Text="AI is thinking harder..." FontStyle="Italic" />
                        </daisy:DaisySkeleton>
                        <daisy:DaisySkeleton IsTextMode="True">
                            <TextBlock Text="Loading content..." />
                        </daisy:DaisySkeleton>
                        <daisy:DaisySkeleton IsTextMode="True">
                            <TextBlock Text="Please wait while we fetch your data" FontSize="12" Opacity="0.8" />
                        </daisy:DaisySkeleton>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Status -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="status" Title="Status" />
                <TextBlock Text="Status is a small icon to visually show the current status of an element, like online, offline, error, etc."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="16">
                    <TextBlock Text="Sizes" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center"
                                daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Size="ExtraSmall" />
                            <TextBlock Text="XS" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Size="Small" />
                            <TextBlock Text="SM" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Size="Medium" />
                            <TextBlock Text="MD" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Size="Large" />
                            <TextBlock Text="LG" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Size="ExtraLarge" />
                            <TextBlock Text="XL" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Brand Colors" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Primary" />
                            <TextBlock Text="Primary" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Secondary" />
                            <TextBlock Text="Secondary" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Accent" />
                            <TextBlock Text="Accent" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Neutral" />
                            <TextBlock Text="Neutral" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="State Colors" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Info" />
                            <TextBlock Text="Info" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Success" />
                            <TextBlock Text="Success" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Warning" />
                            <TextBlock Text="Warning" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Error" />
                            <TextBlock Text="Error" FontSize="10" Opacity="0.5"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <Grid ColumnDefinitions="*">
                        <StackPanel Grid.Column="0" Spacing="10">
                            <TextBlock Text="Battery" FontWeight="SemiBold" Opacity="0.7"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            <daisy:WrapPanel Spacing="12">
                                <daisy:DaisyStatusIndicator Variant="Battery" Color="Primary" BatteryChargePercent="0" />
                                <daisy:DaisyStatusIndicator Variant="Battery" Color="Primary" BatteryChargePercent="25" />
                                <daisy:DaisyStatusIndicator Variant="Battery" Color="Primary" BatteryChargePercent="50" />
                                <daisy:DaisyStatusIndicator Variant="Battery" Color="Primary" BatteryChargePercent="75" />
                                <daisy:DaisyStatusIndicator Variant="Battery" Color="Primary" BatteryChargePercent="100" />
                            </daisy:WrapPanel>

                            <TextBlock Text="Traffic Lights" FontWeight="SemiBold" Opacity="0.7"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            <daisy:WrapPanel Spacing="12">
                                <daisy:DaisyStatusIndicator Variant="TrafficLightVertical" TrafficLightActive="Green" />
                                <daisy:DaisyStatusIndicator Variant="TrafficLightVertical" TrafficLightActive="Yellow" />
                                <daisy:DaisyStatusIndicator Variant="TrafficLightVertical" TrafficLightActive="Red" />
                            </daisy:WrapPanel>
                            <daisy:WrapPanel Spacing="12">
                                <daisy:DaisyStatusIndicator Variant="TrafficLightHorizontal" TrafficLightActive="Green" />
                                <daisy:DaisyStatusIndicator Variant="TrafficLightHorizontal" TrafficLightActive="Yellow" />
                                <daisy:DaisyStatusIndicator Variant="TrafficLightHorizontal" TrafficLightActive="Red" />
                            </daisy:WrapPanel>

                            <TextBlock Text="WiFi Signal (1-3)" FontWeight="SemiBold" Opacity="0.7"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            <daisy:WrapPanel Spacing="12">
                                <daisy:DaisyStatusIndicator Variant="WifiSignal" Color="Primary" SignalStrength="0" />
                                <daisy:DaisyStatusIndicator Variant="WifiSignal" Color="Primary" SignalStrength="1" />
                                <daisy:DaisyStatusIndicator Variant="WifiSignal" Color="Primary" SignalStrength="2" />
                                <daisy:DaisyStatusIndicator Variant="WifiSignal" Color="Primary" SignalStrength="3" />
                            </daisy:WrapPanel>

                            <TextBlock Text="Cellular Signal (1-5)" FontWeight="SemiBold" Opacity="0.7"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            <daisy:WrapPanel Spacing="12">
                                <daisy:DaisyStatusIndicator Variant="CellularSignal" Color="Primary" SignalStrength="0" />
                                <daisy:DaisyStatusIndicator Variant="CellularSignal" Color="Primary" SignalStrength="1" />
                                <daisy:DaisyStatusIndicator Variant="CellularSignal" Color="Primary" SignalStrength="2" />
                                <daisy:DaisyStatusIndicator Variant="CellularSignal" Color="Primary" SignalStrength="3" />
                                <daisy:DaisyStatusIndicator Variant="CellularSignal" Color="Primary" SignalStrength="4" />
                                <daisy:DaisyStatusIndicator Variant="CellularSignal" Color="Primary" SignalStrength="5" />
                            </daisy:WrapPanel>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Ping Animation" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <daisy:DaisyStatusIndicator Color="Error" Variant="Ping" />
                        <TextBlock Text="Server is down" Opacity="0.8"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <TextBlock Text="Bounce Animation" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <daisy:DaisyStatusIndicator Color="Info" Variant="Bounce" />
                        <TextBlock Text="Unread messages" Opacity="0.8"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <TextBlock Text="Usage Examples" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Style="{StaticResource GallerySectionStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Success" Size="Small" />
                            <TextBlock Text="Online" Opacity="0.8"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Neutral" Size="Small" />
                            <TextBlock Text="Offline" Opacity="0.8"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <daisy:DaisyStatusIndicator Color="Warning" Size="Small" Variant="Ping" />
                            <TextBlock Text="Connecting..." Opacity="0.8"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Animation Variants (27 total)" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Spacing="10">
                        <TextBlock Text="Classic Variants" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:WrapPanel Spacing="16">
                            <StackPanel Spacing="4" HorizontalAlignment="Center">
                                <daisy:DaisyStatusIndicator Color="Success" Variant="Default" />
                                <TextBlock Text="Default" FontSize="9" Opacity="0.5"
                                           HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
