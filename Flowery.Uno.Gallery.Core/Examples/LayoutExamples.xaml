<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.LayoutExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True" Background="Transparent" Padding="0,0,0,32">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <StackPanel x:Name="SectionDrawer"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="drawer" Title="Drawer" />
                <TextBlock Text="A sliding sidebar panel for navigation menus or auxiliary content. Toggle between overlay mode (content is covered) and inline mode (content is pushed aside). The drawer automatically opens in responsive layouts when sufficient width is available."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <daisy:DaisyButton Content="Toggle drawer" Variant="Primary" Click="DrawerToggle_Click" />
                        <daisy:DaisyButton Content="Close" Variant="Ghost" Click="DrawerClose_Click" />
                    </StackPanel>

                    <CheckBox Content="Overlay mode"
                              IsChecked="{x:Bind DemoDrawer.OverlayMode, Mode=TwoWay}"
                              Foreground="{ThemeResource DaisyBaseContentBrush}" />

                    <!-- Responsive drawer - auto-opens/closes based on available width -->
                    <Border BorderBrush="{ThemeResource DaisyBase300Brush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            HorizontalAlignment="Stretch"
                            Background="{ThemeResource DaisyBase100Brush}">
                        <daisy:DaisyDrawer x:Name="DemoDrawer"
                                           OverlayMode="False"
                                           ResponsiveMode="True"
                                           ResponsiveThreshold="500"
                                           DrawerWidth="180"
                                           Height="260"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch">
                            <daisy:DaisyDrawer.Pane>
                                <Border Background="{ThemeResource DaisyBase200Brush}"
                                        Padding="12"
                                        Width="180">
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Navigation" FontWeight="SemiBold"
                                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                        <daisy:DaisyMenu>
                                            <StackPanel>
                                                <daisy:DaisyMenuItem IsActive="True">Dashboard</daisy:DaisyMenuItem>
                                                <daisy:DaisyMenuItem>Billing</daisy:DaisyMenuItem>
                                                <daisy:DaisyMenuItem>Settings</daisy:DaisyMenuItem>
                                                <daisy:DaisyMenuItem>Help</daisy:DaisyMenuItem>
                                            </StackPanel>
                                        </daisy:DaisyMenu>
                                    </StackPanel>
                                </Border>
                            </daisy:DaisyDrawer.Pane>

                            <daisy:DaisyDrawer.Content>
                                <Border Background="{ThemeResource DaisyBase100Brush}"
                                        Padding="16"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                    <StackPanel Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Main Content Area"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                        <TextBlock Text="Resize window to see drawer auto-open/close."
                                                   Opacity="0.7"
                                                   TextWrapping="Wrap"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                    </StackPanel>
                                </Border>
                            </daisy:DaisyDrawer.Content>
                        </daisy:DaisyDrawer>
                    </Border>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionHero"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="hero" Title="Hero" />
                <TextBlock Text="A full-width hero container with centered content and optional overlay."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                    <daisy:DaisyHero x:Name="DemoHero" MinimumHeight="220"
                                     OverlayOpacity="0.15"
                                     Background="{ThemeResource DaisyPrimaryBrush}">
                        <StackPanel Spacing="10" MaxWidth="520" Padding="18">
                            <TextBlock x:Name="HeroTitleText" Text="Ship faster with Flowery.Uno"
                                       FontSize="22"
                                       FontWeight="SemiBold" />
                            <TextBlock x:Name="HeroDescText" Text="Hero is a simple, centered layout container. Compose any content inside."
                                       Opacity="0.85"
                                       TextWrapping="Wrap" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <daisy:DaisyButton Content="Get started" Variant="Default" />
                            <daisy:DaisyButton Content="Learn more" Variant="Ghost" Foreground="{ThemeResource DaisyPrimaryContentBrush}" />
                        </StackPanel>
                    </StackPanel>
                </daisy:DaisyHero>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionIndicator"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="indicator" Title="Indicator" />
                <TextBlock Text="Badge overlay that can be aligned to any corner/edge."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="24" Margin="0,0,0,16">
                    <!-- Card with NEW label (top-right, default alignment) -->
                    <daisy:DaisyIndicator>
                        <daisy:DaisyIndicator.Marker>
                            <daisy:DaisyBadge Content="NEW" Variant="Warning" />
                        </daisy:DaisyIndicator.Marker>
                        <daisy:DaisyCard CardStyle="Beveled" BorderThickness="1" MinWidth="160" MinHeight="80" Size="Medium" />
                    </daisy:DaisyIndicator>

                    <!-- Card with SALE label (top-left) -->
                    <daisy:DaisyIndicator MarkerPosition="TopLeft">
                        <daisy:DaisyIndicator.Marker>
                            <daisy:DaisyBadge Content="SALE" Variant="Error" />
                        </daisy:DaisyIndicator.Marker>
                        <daisy:DaisyCard CardStyle="Beveled" BorderThickness="1" MinWidth="160" MinHeight="80" Size="Medium" />
                    </daisy:DaisyIndicator>

                    <!-- Avatar with status dot (bottom-right) -->
                    <daisy:DaisyIndicator MarkerPosition="BottomRight">
                        <daisy:DaisyIndicator.Marker>
                            <daisy:DaisyBadge Variant="Success" CornerRadius="6" Padding="0"
                                             Width="12" Height="12" MinWidth="12" MinHeight="12" />
                        </daisy:DaisyIndicator.Marker>
                        <daisy:DaisyAvatar Initials="JD" Size="Large"
                                           daisy:FlowerySizeManager.IgnoreGlobalSize="True"
                                           Background="{ThemeResource DaisyPrimaryBrush}" />
                    </daisy:DaisyIndicator>

                    <!-- Button with notification (top-right, Edge alignment) -->
                    <daisy:DaisyIndicator MarkerAlignment="Edge">
                        <daisy:DaisyIndicator.Marker>
                            <daisy:DaisyBadge Content="9+" Variant="Error" Size="ExtraSmall" />
                        </daisy:DaisyIndicator.Marker>
                        <daisy:DaisyButton IconSymbol="Message" Variant="Secondary" Width="50" Size="Large" />
                    </daisy:DaisyIndicator>

                    <!-- Button with count (bottom-right, Edge alignment) -->
                    <daisy:DaisyIndicator MarkerPosition="BottomRight" MarkerAlignment="Edge">
                        <daisy:DaisyIndicator.Marker>
                            <daisy:DaisyBadge Content="3" Variant="Secondary" Size="Small" />
                        </daisy:DaisyIndicator.Marker>
                        <daisy:DaisyButton Content="Inbox" Variant="Primary" Size="Large" />
                    </daisy:DaisyIndicator>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionJoin"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="join" Title="Join" />
                <TextBlock Text="Groups controls together with shared borders and rounded corners on the ends."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <TextBlock Text="Buttons" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyJoin>
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyButton Content="Join" />
                            <daisy:DaisyButton Content="Item" />
                            <daisy:DaisyButton Content="Here" />
                        </StackPanel>
                    </daisy:DaisyJoin>

                    <TextBlock Text="Inputs" FontWeight="SemiBold" Opacity="0.8" Margin="0,6,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyJoin>
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyInput Width="160" Text="Search" />
                            <daisy:DaisySelect Width="160">
                                <x:String>All</x:String>
                                <x:String>Images</x:String>
                                <x:String>Videos</x:String>
                            </daisy:DaisySelect>
                            <daisy:DaisyButton Variant="Primary" Content="Go" />
                        </StackPanel>
                    </daisy:DaisyJoin>

                    <TextBlock Text="Vertical" FontWeight="SemiBold" Opacity="0.8" Margin="0,6,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyJoin Orientation="Vertical">
                        <StackPanel>
                            <daisy:DaisyButton Content="Top" />
                            <daisy:DaisyButton Content="Middle" />
                            <daisy:DaisyButton Content="Bottom" />
                        </StackPanel>
                    </daisy:DaisyJoin>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionMask"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="mask" Title="Mask (Squircle)" />
                <TextBlock Text="Mask container (Uno clipping limitations apply; squircle/square/circle are best supported)."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="12">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Squircle" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Squircle" Width="110" Height="110">
                            <Border x:Name="MaskSquircleBorder" Background="{ThemeResource DaisyPrimaryBrush}">
                                <TextBlock x:Name="MaskSquircleText" Text="SQ"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisyPrimaryContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="Circle" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Circle" Width="110" Height="110">
                            <Border x:Name="MaskCircleBorder" Background="{ThemeResource DaisySecondaryBrush}">
                                <TextBlock x:Name="MaskCircleText" Text="C"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisySecondaryContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="Square" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Square" Width="110" Height="110">
                            <Border x:Name="MaskSquareBorder" Background="{ThemeResource DaisyAccentBrush}">
                                <TextBlock x:Name="MaskSquareText" Text="■"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisyAccentContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>

                    <StackPanel x:Name="MaskHeartExample" Spacing="6">
                        <TextBlock Text="Heart" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Heart" Width="110" Height="110">
                            <Border Background="{ThemeResource DaisyErrorBrush}">
                                <TextBlock Text="♥"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisyErrorContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>

                    <StackPanel x:Name="MaskHexagonExample" Spacing="6">
                        <TextBlock Text="Hexagon" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Hexagon" Width="110" Height="110">
                            <Border Background="{ThemeResource DaisyInfoBrush}">
                                <TextBlock Text="⬡"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisyInfoContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>

                    <StackPanel x:Name="MaskDiamondExample" Spacing="6">
                        <TextBlock Text="Diamond" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Diamond" Width="110" Height="110">
                            <Border Background="{ThemeResource DaisyWarningBrush}">
                                <TextBlock Text="◆"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisyWarningContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>

                    <StackPanel x:Name="MaskTriangleExample" Spacing="6">
                        <TextBlock Text="Triangle" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMask Variant="Triangle" Width="110" Height="110">
                            <Border Background="{ThemeResource DaisySuccessBrush}">
                                <TextBlock Text="▲"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource DaisySuccessContentBrush}" />
                            </Border>
                        </daisy:DaisyMask>
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionMockup"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="mockup" Title="Mockup (Code)" />
                <TextBlock Text="Mockup frames for code, windows, and browser previews. Supports Mac, Windows, and Linux chrome styles."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="16">
                    <!-- Code variant (default) -->
                    <daisy:DaisyMockup Variant="Code" Width="300" Height="160">
                        <Border Padding="14">
                            <TextBlock FontFamily="Consolas,Courier New,monospace"
                                       daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                       LineHeight="18"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}"
                                       Text="dotnet new unoapp&#x0a;dotnet build&#x0a;./scripts/build_all.sh" />
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Window variant - Mac chrome (default) -->
                    <daisy:DaisyMockup Variant="Window" ChromeStyle="Mac" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyBase100Brush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="macOS Window" FontWeight="SemiBold"
                                           daisy:FlowerySizeManager.ResponsiveFont="Primary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Traffic light buttons on the left."
                                           TextWrapping="Wrap"
                                           Opacity="0.7"
                                           daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Window variant - Windows chrome -->
                    <daisy:DaisyMockup Variant="Window" ChromeStyle="Windows" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyBase100Brush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Windows Window" FontWeight="SemiBold"
                                           daisy:FlowerySizeManager.ResponsiveFont="Primary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Minimize/maximize/close on the right."
                                           TextWrapping="Wrap"
                                           Opacity="0.7"
                                           daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Window variant - Linux chrome -->
                    <daisy:DaisyMockup Variant="Window" ChromeStyle="Linux" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyBase100Brush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Linux Window (GNOME)" FontWeight="SemiBold"
                                           daisy:FlowerySizeManager.ResponsiveFont="Primary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Circular buttons on the right."
                                           TextWrapping="Wrap"
                                           Opacity="0.7"
                                           daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Browser variant - Mac chrome (default) -->
                    <daisy:DaisyMockup Variant="Browser" ChromeStyle="Mac" Url="https://floweryui.dev" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyBase200Brush}">
                            <TextBlock Text="macOS Browser" Opacity="0.7"
                                       daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Browser variant - Windows chrome -->
                    <daisy:DaisyMockup Variant="Browser" ChromeStyle="Windows" Url="https://microsoft.com" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyBase200Brush}">
                            <TextBlock Text="Windows Browser (Edge style)" Opacity="0.7"
                                       daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Browser variant - Linux chrome -->
                    <daisy:DaisyMockup Variant="Browser" ChromeStyle="Linux" Url="https://gnome.org" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyBase200Brush}">
                            <TextBlock Text="Linux Browser (GNOME style)" Opacity="0.7"
                                       daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Browser with colored background -->
                    <daisy:DaisyMockup Variant="Browser" Url="https://uno.dev" Width="300" Height="160">
                        <Border Padding="14" Background="{ThemeResource DaisyPrimaryBrush}">
                            <StackPanel Spacing="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Uno Platform"
                                           FontWeight="Bold"
                                           daisy:FlowerySizeManager.ResponsiveFont="Primary"
                                           HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyPrimaryContentBrush}" />
                                <TextBlock Text="Build cross-platform apps"
                                           Opacity="0.85"
                                           daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                           HorizontalAlignment="Center"
                                           Foreground="{ThemeResource DaisyPrimaryContentBrush}" />
                            </StackPanel>
                        </Border>
                    </daisy:DaisyMockup>

                    <!-- Windows with custom app icon -->
                    <daisy:DaisyMockup Variant="Window" ChromeStyle="Windows" Width="300" Height="160">
                        <daisy:DaisyMockup.AppIcon>
                            <daisy:DaisyIconText IconSize="24"
                                                 Foreground="{ThemeResource DaisyInfoBrush}"
                                                 IconData="M12,3L2,12H5V20H19V12H22L12,3M12,8.5C14.34,8.5 16.46,9.43 18,10.94L16.8,12.12C15.58,10.91 13.88,10.17 12,10.17C10.12,10.17 8.42,10.91 7.2,12.12L6,10.94C7.54,9.43 9.66,8.5 12,8.5M12,12C13.38,12 14.64,12.56 15.54,13.46L14.33,14.67C13.74,14.08 12.91,13.71 12,13.71C11.09,13.71 10.26,14.08 9.67,14.67L8.46,13.46C9.36,12.56 10.62,12 12,12M12,15.5C12.62,15.5 13.17,15.76 13.54,16.17L12,18L10.46,16.17C10.83,15.76 11.38,15.5 12,15.5Z" />
                        </daisy:DaisyMockup.AppIcon>
                        <Border Padding="14" Background="{ThemeResource DaisyBase100Brush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Custom App Icon" FontWeight="SemiBold"
                                           daisy:FlowerySizeManager.ResponsiveFont="Primary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Windows chrome with a Wi-Fi icon."
                                           TextWrapping="Wrap"
                                           Opacity="0.7"
                                           daisy:FlowerySizeManager.ResponsiveFont="Secondary"
                                           Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                    </daisy:DaisyMockup>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionResizableColumns"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="resizablecolumns" Title="Resizable Columns Host" />
                <TextBlock Text="A multi-column host that provides a shared resize grip between all columns. Supports global resizing (all columns share the same width) with min/max constraints."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="16">
                    <daisy:DaisyResizableColumnsHost x:Name="DemoResizableHost"
                                                     IsGripEnabled="True"
                                                     ColumnWidth="200"
                                                     MinColumnWidth="120"
                                                     MaxColumnWidth="400"
                                                     ColumnSpacing="16"
                                                     Height="300">
                        <Border Width="{Binding ColumnWidth, ElementName=DemoResizableHost}"
                                Background="{ThemeResource DaisyBase200Brush}"
                                BorderBrush="{ThemeResource DaisyBase300Brush}"
                                BorderThickness="1" CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Column 1" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Hover the gap on the right to resize." Opacity="0.7" TextWrapping="Wrap" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                        <Border Width="{Binding ColumnWidth, ElementName=DemoResizableHost}"
                                Background="{ThemeResource DaisyBase200Brush}"
                                BorderBrush="{ThemeResource DaisyBase300Brush}"
                                BorderThickness="1" CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Column 2" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Resizing this column resizes all others." Opacity="0.7" TextWrapping="Wrap" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                        <Border Width="{Binding ColumnWidth, ElementName=DemoResizableHost}"
                                Background="{ThemeResource DaisyBase200Brush}"
                                BorderBrush="{ThemeResource DaisyBase300Brush}"
                                BorderThickness="1" CornerRadius="8" Padding="12">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Column 3" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                                <TextBlock Text="Shared width logic." Opacity="0.7" TextWrapping="Wrap" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            </StackPanel>
                        </Border>
                    </daisy:DaisyResizableColumnsHost>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel x:Name="SectionStack"
                        x:DeferLoadStrategy="Lazy"
                        Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="stack" Title="Stack" />
                <TextBlock Text="Stacked items with optional navigation arrows and counter."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="16">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Static stack" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyStack Width="260" Height="160">
                            <StackPanel>
                                <Border x:Name="StackTopBorder" CornerRadius="12" Background="{ThemeResource DaisyPrimaryBrush}" Padding="12">
                                    <TextBlock x:Name="StackTopText" Text="Top" Foreground="{ThemeResource DaisyPrimaryContentBrush}" FontWeight="SemiBold" />
                                </Border>
                                <Border x:Name="StackMiddleBorder" CornerRadius="12" Background="{ThemeResource DaisySecondaryBrush}" Padding="12">
                                    <TextBlock x:Name="StackMiddleText" Text="Middle" Foreground="{ThemeResource DaisySecondaryContentBrush}" FontWeight="SemiBold" />
                                </Border>
                                <Border x:Name="StackBottomBorder" CornerRadius="12" Background="{ThemeResource DaisyAccentBrush}" Padding="12">
                                    <TextBlock x:Name="StackBottomText" Text="Bottom" Foreground="{ThemeResource DaisyAccentContentBrush}" FontWeight="SemiBold" />
                                </Border>
                            </StackPanel>
                        </daisy:DaisyStack>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="Navigation + counter" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyStack Width="260"
                                          Height="160"
                                          ShowNavigation="True"
                                          ShowCounter="True"
                                          NavigationColor="Primary">
                            <StackPanel>
                                <Border CornerRadius="12" Background="{ThemeResource DaisyBase200Brush}" Padding="12">
                                    <TextBlock Text="Page 1" Opacity="0.8"
