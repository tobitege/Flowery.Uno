<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.NavigationExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True" Background="Transparent" Padding="0,0,0,32">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="breadcrumbs" Title="Breadcrumbs" />
                <TextBlock Text="Breadcrumb trail for hierarchical navigation."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <TextBlock Text="Default separator" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyBreadcrumbs>
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyBreadcrumbItem Icon="{StaticResource DaisyIconHome}">Home</daisy:DaisyBreadcrumbItem>
                            <daisy:DaisyBreadcrumbItem>Library</daisy:DaisyBreadcrumbItem>
                            <daisy:DaisyBreadcrumbItem>Data</daisy:DaisyBreadcrumbItem>
                        </StackPanel>
                    </daisy:DaisyBreadcrumbs>

                    <TextBlock Text="Custom separator" FontWeight="SemiBold" Opacity="0.8" Margin="0,6,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyBreadcrumbs Separator=">" Size="Small">
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyBreadcrumbItem>Docs</daisy:DaisyBreadcrumbItem>
                            <daisy:DaisyBreadcrumbItem>Components</daisy:DaisyBreadcrumbItem>
                            <daisy:DaisyBreadcrumbItem>Breadcrumbs</daisy:DaisyBreadcrumbItem>
                        </StackPanel>
                    </daisy:DaisyBreadcrumbs>
                </StackPanel>
            </StackPanel>

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="breadcrumbbar" Title="Breadcrumb bar" />
                <TextBlock Text="WinUI BreadcrumbBar styled with Daisy tokens."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <TextBlock Text="Default" FontWeight="SemiBold" Opacity="0.8"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyBreadcrumbBar ItemsSource="{x:Bind BreadcrumbBarItems}" />

                    <TextBlock Text="Small" FontWeight="SemiBold" Opacity="0.8" Margin="0,6,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyBreadcrumbBar ItemsSource="{x:Bind BreadcrumbBarItems}" Size="Small" />

                    <TextBlock Text="With icons" FontWeight="SemiBold" Opacity="0.8" Margin="0,6,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyBreadcrumbBar x:Name="IconBreadcrumbBar" ItemsSource="{x:Bind BreadcrumbBarIconItems}">
                        <daisy:DaisyBreadcrumbBar.ItemTemplate>
                            <DataTemplate>
                                <daisy:DaisyIconText Text="{Binding Text}"
                                                     IconData="{Binding IconData}"
                                                     Size="{Binding ElementName=IconBreadcrumbBar, Path=Size}"
                                                     Foreground="{Binding ElementName=IconBreadcrumbBar, Path=Foreground}" />
                            </DataTemplate>
                        </daisy:DaisyBreadcrumbBar.ItemTemplate>
                    </daisy:DaisyBreadcrumbBar>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="dock" Title="Dock" />
                <TextBlock Text="macOS-style dock: hover highlight and optional selection."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <daisy:DaisyDock x:Name="DemoDock"
                                     Size="Medium"
                                     AutoSelect="True"
                                     SelectedIndex="1"
                                     ItemSelected="Dock_ItemSelected">
                        <StackPanel Orientation="Horizontal">
                            <daisy:DaisyIconText IconData="{StaticResource DaisyIconHome}" />
                            <daisy:DaisyIconText IconData="{StaticResource DaisyIconUser}" />
                            <daisy:DaisyIconText IconData="{StaticResource DaisyIconSettings}" />
                            <daisy:DaisyIconText IconData="{StaticResource DaisyIconPalette}" />
                        </StackPanel>
                    </daisy:DaisyDock>

                    <TextBlock x:Name="DockSelectionText"
                               Text="Selected: (click an icon)"
                               Opacity="0.7"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="menu" Title="Menu" />
                <TextBlock Text="Vertical/horizontal menus with active + disabled items."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <daisy:WrapPanel Spacing="16">
                    <StackPanel Spacing="8" Width="240">
                        <TextBlock Text="Vertical" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMenu>
                            <StackPanel>
                                <daisy:DaisyMenuItem IsActive="True">Dashboard</daisy:DaisyMenuItem>
                                <daisy:DaisyMenuItem>Team</daisy:DaisyMenuItem>
                                <daisy:DaisyMenuItem>Billing</daisy:DaisyMenuItem>
                                <daisy:DaisyMenuItem IsDisabled="True">Disabled</daisy:DaisyMenuItem>
                            </StackPanel>
                        </daisy:DaisyMenu>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Horizontal" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyMenu Orientation="Horizontal" Size="Small">
                            <StackPanel Orientation="Horizontal">
                                <daisy:DaisyMenuItem IsActive="True">Home</daisy:DaisyMenuItem>
                                <daisy:DaisyMenuItem>Docs</daisy:DaisyMenuItem>
                                <daisy:DaisyMenuItem>Pricing</daisy:DaisyMenuItem>
                            </StackPanel>
                        </daisy:DaisyMenu>
                    </StackPanel>
                </daisy:WrapPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="navbar" Title="Navbar" />
                <daisy:DaisyNavbar>
                    <daisy:DaisyNavbar.NavbarStart>
                        <TextBlock Text="Flowery" FontWeight="SemiBold"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </daisy:DaisyNavbar.NavbarStart>
                    <daisy:DaisyNavbar.NavbarCenter>
                        <TextBlock Text="Center" Opacity="0.7"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </daisy:DaisyNavbar.NavbarCenter>
                    <daisy:DaisyNavbar.NavbarEnd>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <daisy:DaisyButton Content="Login" Variant="Ghost" Size="Small" />
                            <daisy:DaisyButton Content="Sign up" Variant="Primary" Size="Small" />
                        </StackPanel>
                    </daisy:DaisyNavbar.NavbarEnd>
                </daisy:DaisyNavbar>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="pagination" Title="Pagination" />
                <TextBlock Text="Page navigation control with smart truncation, ellipsis, and jump buttons for large page counts."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="16">
                    <!-- Basic pagination -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Basic (7 pages)" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPagination x:Name="BasicPagination"
                                               TotalPages="7"
                                               CurrentPage="3"
                                               PageChanged="Pagination_PageChanged" />
                    </StackPanel>

                    <!-- Large page count with full navigation (100 pages) -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Large page count (100 pages) - Full navigation" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPagination x:Name="LargePagination"
                                               TotalPages="100"
                                               CurrentPage="50"
                                               MaxVisiblePages="7"
                                               ShowFirstLast="True"
                                               ShowJumpButtons="True"
                                               JumpStep="10"
                                               PageChanged="Pagination_PageChanged" />
                        <TextBlock Text="Order by magnitude: |← (first) « (jump) ‹ (prev) [pages] › (next) » (jump) →| (last)"
                                   Opacity="0.5" FontSize="12"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    </StackPanel>

                    <!-- With First/Last buttons -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="With First/Last buttons" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPagination TotalPages="50"
                                               CurrentPage="25"
                                               MaxVisiblePages="5"
                                               ShowFirstLast="True"
                                               PageChanged="Pagination_PageChanged" />
                    </StackPanel>

                    <!-- With Jump buttons (double chevron) -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="With Jump buttons (skip 10 pages)" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPagination TotalPages="100"
                                               CurrentPage="50"
                                               MaxVisiblePages="5"
                                               ShowJumpButtons="True"
                                               JumpStep="10"
                                               PageChanged="Pagination_PageChanged" />
                    </StackPanel>

                    <!-- Full featured -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Full featured (First/Last + Jump + Prev/Next)" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPagination x:Name="FullPagination"
                                               TotalPages="200"
                                               CurrentPage="100"
                                               MaxVisiblePages="5"
                                               ShowFirstLast="True"
                                               ShowJumpButtons="True"
                                               JumpStep="10"
                                               PageChanged="Pagination_PageChanged" />
                    </StackPanel>

                    <!-- Minimal (no prev/next) -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Minimal (no prev/next buttons)" FontWeight="SemiBold" Opacity="0.8"
                                   Foreground="{ThemeResource DaisyBaseContentBrush}" />
                        <daisy:DaisyPagination TotalPages="10"
                                               CurrentPage="5"
                                               ShowPrevNext="False"
                                               PageChanged="Pagination_PageChanged" />
                    </StackPanel>

                    <TextBlock x:Name="PaginationStatusText"
                               Text="Current page: 3"
                               Opacity="0.7"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="steps" Title="Steps" />
                <StackPanel Spacing="16">
                    <TextBlock Text="Steps can be used to show a progress or a list of steps."
                               Opacity="0.7"
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />

                    <daisy:WrapPanel Spacing="16">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Horizontal Steps" FontWeight="SemiBold" Opacity="0.8"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            <daisy:DaisySteps SelectedIndex="1" Width="400" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <daisy:DaisyStepItem Content="Register" Color="Primary" />
                                    <daisy:DaisyStepItem Content="Choose plan" Color="Primary" />
                                    <daisy:DaisyStepItem Content="Purchase" />
                                    <daisy:DaisyStepItem Content="Receive Product" />
                                </StackPanel>
                            </daisy:DaisySteps>
                        </StackPanel>

                        <StackPanel Spacing="10">
                            <TextBlock Text="Vertical Steps" FontWeight="SemiBold" Opacity="0.8"
                                       Foreground="{ThemeResource DaisyBaseContentBrush}" />
                            <daisy:DaisySteps Orientation="Vertical" SelectedIndex="1" HorizontalAlignment="Left">
                                <StackPanel>
                                    <daisy:DaisyStepItem Content="Register" Color="Primary" />
                                    <daisy:DaisyStepItem Content="Choose plan" Color="Primary" />
                                    <daisy:DaisyStepItem Content="Purchase" />
                                    <daisy:DaisyStepItem Content="Receive Product" />
                                </StackPanel>
                            </daisy:DaisySteps>
                        </StackPanel>
                    </daisy:WrapPanel>

                    <TextBlock Text="Color Variants" FontWeight="SemiBold" Opacity="0.8" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:WrapPanel Spacing="16">
                        <daisy:DaisySteps Width="400" HorizontalAlignment="Left">
                             <StackPanel Orientation="Horizontal">
                                <daisy:DaisyStepItem Content="Start" Color="Primary" IsActive="True" />
                                <daisy:DaisyStepItem Content="In Progress" Color="Secondary" IsActive="True" />
                                <daisy:DaisyStepItem Content="Review" Color="Accent" IsActive="True" />
                                <daisy:DaisyStepItem Content="Complete" Color="Success" IsActive="True" />
                            </StackPanel>
                        </daisy:DaisySteps>
                        
                        <daisy:DaisySteps Width="400" HorizontalAlignment="Left">
                             <StackPanel Orientation="Horizontal">
                                <daisy:DaisyStepItem Content="Info" Color="Info" IsActive="True" />
                                <daisy:DaisyStepItem Content="Success" Color="Success" IsActive="True" />
                                <daisy:DaisyStepItem Content="Warning" Color="Warning" IsActive="True" />
                                <daisy:DaisyStepItem Content="Error" Color="Error" IsActive="True" />
                            </StackPanel>
                        </daisy:DaisySteps>
                    </daisy:WrapPanel>

                    <TextBlock Text="Sizes" FontWeight="SemiBold" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <StackPanel Spacing="16" daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Extra Small" Opacity="0.5" FontSize="12" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                            <daisy:DaisySteps Size="ExtraSmall" SelectedIndex="1" Width="350" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <daisy:DaisyStepItem Content="Register" Color="Primary"/>
                                    <daisy:DaisyStepItem Content="Plan" Color="Primary"/>
                                    <daisy:DaisyStepItem Content="Purchase"/>
                                    <daisy:DaisyStepItem Content="Done"/>
                                </StackPanel>
                            </daisy:DaisySteps>
                        </StackPanel>
                        <StackPanel Spacing="6">
                            <TextBlock Text="Small" Opacity="0.5" FontSize="12" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                            <daisy:DaisySteps Size="Small" SelectedIndex="1" Width="350" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <daisy:DaisyStepItem Content="Register" Color="Primary"/>
                                    <daisy:DaisyStepItem Content="Plan" Color="Primary"/>
                                    <daisy:DaisyStepItem Content="Purchase"/>
                                    <daisy:DaisyStepItem Content="Done"/>
                                </StackPanel>
                            </daisy:DaisySteps>
                        </StackPanel>
                        <StackPanel Spacing="6">
                            <TextBlock Text="Large" Opacity="0.5" FontSize="12" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                            <daisy:DaisySteps Size="Large" SelectedIndex="1" Width="400" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <daisy:DaisyStepItem Content="Register" Color="Primary"/>
                                    <daisy:DaisyStepItem Content="Plan" Color="Primary"/>
                                    <daisy:DaisyStepItem Content="Purchase"/>
                                    <daisy:DaisyStepItem Content="Done"/>
                                </StackPanel>
                            </daisy:DaisySteps>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Scrollable (Many Steps)" FontWeight="SemiBold" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Enabled" MaxWidth="600" HorizontalAlignment="Left">
                        <daisy:DaisySteps Width="900" Margin="0,0,0,16">
                             <StackPanel Orientation="Horizontal">
                                <daisy:DaisyStepItem Content="start"/>
                                <daisy:DaisyStepItem Content="2" Color="Secondary" IsActive="True"/>
                                <daisy:DaisyStepItem Content="3" Color="Secondary" IsActive="True"/>
                                <daisy:DaisyStepItem Content="4" Color="Secondary" IsActive="True"/>
                                <daisy:DaisyStepItem Content="5"/>
                                <daisy:DaisyStepItem Content="6" Color="Accent" IsActive="True"/>
                                <daisy:DaisyStepItem Content="7" Color="Accent" IsActive="True"/>
                                <daisy:DaisyStepItem Content="8"/>
                                <daisy:DaisyStepItem Content="9" Color="Error" IsActive="True"/>
                                <daisy:DaisyStepItem Content="10" Color="Error" IsActive="True"/>
                                <daisy:DaisyStepItem Content="11"/>
                                <daisy:DaisyStepItem Content="12"/>
                                <daisy:DaisyStepItem Content="13" Color="Warning" IsActive="True"/>
                                <daisy:DaisyStepItem Content="14" Color="Warning" IsActive="True"/>
                                <daisy:DaisyStepItem Content="15"/>
                                <daisy:DaisyStepItem Content="16" Color="Neutral" IsActive="True"/>
                                <daisy:DaisyStepItem Content="17" Color="Neutral" IsActive="True"/>
                                <daisy:DaisyStepItem Content="end" Color="Neutral" IsActive="True"/>
                            </StackPanel>
                        </daisy:DaisySteps>
                    </ScrollViewer>

                    <TextBlock Text="Interactive Example" FontWeight="SemiBold" Margin="0,8,0,0"
                               Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyCard Padding="24" HorizontalAlignment="Left" Background="{ThemeResource DaisyBase200Brush}">
                        <StackPanel Spacing="16" HorizontalAlignment="Center">
                            <daisy:DaisySteps x:Name="InteractiveSteps" SelectedIndex="0" Width="400" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <daisy:DaisyStepItem Content="Step 1" Color="Primary" />
                                    <daisy:DaisyStepItem Content="Step 2" />
                                    <daisy:DaisyStepItem Content="Step 3" />
                                    <daisy:DaisyStepItem Content="Step 4" />
                                </StackPanel>
                            </daisy:DaisySteps>
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <daisy:DaisyButton Content="Previous" Click="OnStepsPrevious" />
                                <daisy:DaisyButton Content="Next" Variant="Primary" Click="OnStepsNext" />
                                <daisy:DaisyButton Content="Reset" ButtonStyle="Outline" Click="OnStepsReset" />
                            </StackPanel>
                        </StackPanel>
                    </daisy:DaisyCard>
                </StackPanel>
            </StackPanel>

            <daisy:DaisyDivider />

            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="tabs" Title="Tabs" />
                <TextBlock Text="Tabs are used to show different content in a tabbed interface"
                           Opacity="0.7" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}" />

                <!-- Photo tab recipe -->
                <TextBlock Text="Photo tab recipe" FontWeight="SemiBold" Margin="0,16,0,0" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <TextBlock Text="A photo card with an overlay action bar. Click an icon to swap the photo."
                           Opacity="0.7" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>

                <Border x:Name="PhotoTabCard"
                        Width="260"
                        Height="260"
                        CornerRadius="16"
                        HorizontalAlignment="Left"
                        Margin="0,12,0,0">
                    <Grid>
                        <Image x:Name="PhotoTabImage0"
                               Source="ms-appx:///Assets/tile_blue.jpg"
                               Stretch="UniformToFill"
                               Opacity="1" />
                        <Image x:Name="PhotoTabImage1"
                               Source="ms-appx:///Assets/tile_purple.jpg"
                               Stretch="UniformToFill"
                               Opacity="0" />
                        <Image x:Name="PhotoTabImage2"
                               Source="ms-appx:///Assets/tile_yellow.jpg"
                               Stretch="UniformToFill"
                               Opacity="0" />

                        <!-- Overlay bar -->
                        <Border x:Name="PhotoTabBar"
                                Width="168"
                                Height="44"
                                CornerRadius="22"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,12"
                                Opacity="0.85"
                                Background="{ThemeResource DaisyPrimaryBrush}">
                            <Grid Margin="6">
                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                    <daisy:DaisyButton x:Name="PhotoTabAction0"
                                                       Width="32" Height="32" Padding="0" Shape="Circle" Variant="Default"
                                                       Click="OnPhotoTabActionClick" Tag="0">
                                        <daisy:DaisyIconText IconData="{StaticResource DaisyIconUser}" Size="Medium" />
                                    </daisy:DaisyButton>
                                    <daisy:DaisyButton x:Name="PhotoTabAction1"
                                                       Width="32" Height="32" Padding="0" Shape="Circle" Variant="Default"
                                                       Click="OnPhotoTabActionClick" Tag="1">
                                        <daisy:DaisyIconText IconData="{StaticResource DaisyIconDog}" Size="Medium" />
                                    </daisy:DaisyButton>
                                    <daisy:DaisyButton x:Name="PhotoTabAction2"
                                                       Width="32" Height="32" Padding="0" Shape="Circle" Variant="Default"
                                                       Click="OnPhotoTabActionClick" Tag="2">
                                        <daisy:DaisyIconText IconData="{StaticResource DaisyIconNavigation}" Size="Medium" />
                                    </daisy:DaisyButton>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Tab Variants -->
                <TextBlock Text="Variants" FontWeight="SemiBold" Margin="0,16,0,0" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <daisy:WrapPanel Spacing="16">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Bordered (default)" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Bordered">
                            <StackPanel>
                                <TabViewItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Boxed (pill style)" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed">
                            <StackPanel>
                                <TabViewItem Header="Tab 1">
                                    <TextBlock Text="Content 1" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Tab 2">
                                    <TextBlock Text="Content 2" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                </daisy:WrapPanel>

                <!-- Tab Sizes -->
                <TextBlock Text="Sizes" FontWeight="SemiBold" Margin="0,16,0,0" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <daisy:WrapPanel Spacing="16" daisy:FlowerySizeManager.IgnoreGlobalSize="True">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Extra Small" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed" Size="ExtraSmall">
                            <StackPanel>
                                <TabViewItem Header="Tab 1">
                                    <TextBlock Text="XS" Padding="8" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Tab 2">
                                    <TextBlock Text="XS" Padding="8" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                    <StackPanel Spacing="10">
                        <TextBlock Text="Small" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed" Size="Small">
                            <StackPanel>
                                <TabViewItem Header="Tab 1">
                                    <TextBlock Text="Small" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Tab 2">
                                    <TextBlock Text="Small" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                    <StackPanel Spacing="10">
                        <TextBlock Text="Medium (default)" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed" Size="Medium">
                            <StackPanel>
                                <TabViewItem Header="Tab 1">
                                    <TextBlock Text="Medium" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Tab 2">
                                    <TextBlock Text="Medium" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                    <StackPanel Spacing="10">
                        <TextBlock Text="Large" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed" Size="Large">
                            <StackPanel>
                                <TabViewItem Header="Tab 1">
                                    <TextBlock Text="Large" Padding="12" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Tab 2">
                                    <TextBlock Text="Large" Padding="12" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                </daisy:WrapPanel>

                <!-- Tab Width Modes -->
                <TextBlock Text="Width Modes" FontWeight="SemiBold" Margin="0,16,0,0" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <daisy:WrapPanel Spacing="16">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Auto (default)" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed" TabWidthMode="Auto">
                            <StackPanel>
                                <TabViewItem Header="Short">
                                    <TextBlock Text="Content 1" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Medium Tab">
                                    <TextBlock Text="Content 2" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Longer Tab Name">
                                    <TextBlock Text="Content 3" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Equal (all same width)" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed" TabWidthMode="Equal" Width="400">
                            <StackPanel>
                                <TabViewItem Header="Short">
                                    <TextBlock Text="Content 1" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Medium Tab">
                                    <TextBlock Text="Content 2" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Longer Tab Name">
                                    <TextBlock Text="Content 3" Padding="10" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                </daisy:WrapPanel>

                <!-- Colors -->
                <TextBlock Text="Semantic &amp; Palette Colors" FontWeight="SemiBold" Margin="0,16,0,0" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <daisy:WrapPanel Spacing="16">
                     <StackPanel Spacing="10">
                        <TextBlock Text="Semantic Colors" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed">
                            <StackPanel>
                                <TabViewItem Header="Primary" daisy:DaisyTabs.TabColor="Primary">
                                    <TextBlock Text="Primary active style" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Secondary" daisy:DaisyTabs.TabColor="Secondary">
                                    <TextBlock Text="Secondary active style" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Accent" daisy:DaisyTabs.TabColor="Accent">
                                    <TextBlock Text="Accent active style" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Palette Colors" Opacity="0.5" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                        <daisy:DaisyTabs Variant="Boxed">
                            <StackPanel>
                                <TabViewItem Header="Indigo" daisy:DaisyTabs.TabPaletteColor="Indigo">
                                    <TextBlock Text="Indigo color" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Green" daisy:DaisyTabs.TabPaletteColor="Green">
                                    <TextBlock Text="Green color" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                                <TabViewItem Header="Red" daisy:DaisyTabs.TabPaletteColor="Red">
                                    <TextBlock Text="Red color" Padding="16" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                                </TabViewItem>
                            </StackPanel>
                        </daisy:DaisyTabs>
                    </StackPanel>
                </daisy:WrapPanel>

                <!-- Code Editor Tabs Example (VS Code style) -->
                <TextBlock Text="Code Editor Example (VS Code style)" FontWeight="SemiBold" Margin="0,16,0,0" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <TextBlock Text="Right-click tabs to access context menu with close actions and color selection"
                           Opacity="0.7" daisy:FlowerySizeManager.ResponsiveFont="Primary" Foreground="{ThemeResource DaisyBaseContentBrush}"/>
                <daisy:DaisyCard Background="{ThemeResource DaisyBase200Brush}" Padding="0" Margin="0,12,0,0" HorizontalAlignment="Left">
                    <daisy:DaisyTabs x:Name="CodeEditorTabs"
                                     Variant="Boxed"
                                     Size="Small"
                                     EnableTabContextMenu="True"
                                     CloseTabRequested="OnCodeEditorCloseTab"
                                     CloseOtherTabsRequested="OnCodeEditorCloseOtherTabs"
                                     CloseTabsToRightRequested="OnCodeEditorCloseTabsToRight"
                                     TabPaletteColorChangeRequested="OnCodeEditorTabPaletteColorChange">
                        <StackPanel>
                            <TabViewItem Header="Program.cs" daisy:DaisyTabs.TabPaletteColor="Green">
                                <StackPanel Margin="12,12,12,8" Spacing="4" MinHeight="200">
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">using</Run> <Run>System;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">using</Run> <Run>Flowery.Controls;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">namespace</Run> <Run>MyApp;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">public class</Run> <Run Foreground="{ThemeResource DaisySuccessBrush}">Program</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="{}{" />
                                    <TextBlock FontFamily="Consolas" Opacity="0.4" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="    // Entry point" />
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="{}}" />
                                </StackPanel>
                            </TabViewItem>
                            <TabViewItem Header="MainPage.xaml" daisy:DaisyTabs.TabPaletteColor="Indigo">
                                <StackPanel Margin="12,12,12,8" Spacing="4" MinHeight="200">
                                    <TextBlock FontFamily="Consolas" Opacity="0.4" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="&lt;!-- Main View --&gt;" />
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">&lt;Page</Run> <Run>x:Class=</Run><Run Foreground="{ThemeResource DaisyWarningBrush}">"MainPage"</Run><Run Foreground="{ThemeResource DaisyInfoBrush}">&gt;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run>    &lt;Grid&gt;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run>        &lt;TextBlock Text=</Run><Run Foreground="{ThemeResource DaisyWarningBrush}">"Hello World"</Run><Run>/&gt;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run>    &lt;/Grid&gt;</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">&lt;/Page&gt;</Run>
                                    </TextBlock>
                                </StackPanel>
                            </TabViewItem>
                            <TabViewItem Header="App.xaml.cs" daisy:DaisyTabs.TabPaletteColor="Lime">
                                <StackPanel Margin="12,12,12,8" Spacing="4" MinHeight="200">
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary">
                                        <Run Foreground="{ThemeResource DaisyInfoBrush}">public partial class</Run> <Run Foreground="{ThemeResource DaisySuccessBrush}">App</Run> <Run>:</Run> <Run Foreground="{ThemeResource DaisySuccessBrush}">Application</Run>
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="{}{" />
                                    <TextBlock FontFamily="Consolas" Opacity="0.4" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="    // Application lifecycle" />
                                    <TextBlock FontFamily="Consolas" Opacity="0.8" daisy:FlowerySizeManager.ResponsiveFont="Primary" Text="{}}" />
                                </StackPanel>
                            </TabViewItem>
                        </StackPanel>
                    </daisy:DaisyTabs>
                </daisy:DaisyCard>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</local:ScrollableExamplePage>
