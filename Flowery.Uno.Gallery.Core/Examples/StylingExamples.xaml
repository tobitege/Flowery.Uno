<local:ScrollableExamplePage
    x:Class="Flowery.Uno.Gallery.Examples.StylingExamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:local="using:Flowery.Uno.Gallery.Examples">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" IsTabStop="True" Background="Transparent" Padding="0,0,0,32">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Introduction -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-intro" Title="Lightweight Styling" />
                <TextBlock TextWrapping="Wrap" Opacity="0.9" Foreground="{ThemeResource DaisyBaseContentBrush}"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Flowery.Uno controls support lightweight styling through control-specific resource keys.
                    Override colors at the instance or application level without creating custom styles.
                </TextBlock>
                <daisy:DaisyCard Variant="Compact" Margin="0,12,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock FontWeight="SemiBold" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Primary">Resource Naming Convention:</TextBlock>
                        <TextBlock FontFamily="Consolas" Foreground="{ThemeResource DaisyPrimaryBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Primary">Daisy{Control}{Variant?}{Part?}{State?}{Property}</TextBlock>
                        <TextBlock Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary">Examples: DaisyButtonBackground, DaisyInputPrimaryBorderBrush, DaisyTableRowHoverBackground</TextBlock>
                    </StackPanel>
                </daisy:DaisyCard>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Actions Controls -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-actions" Title="Actions" />
                <TextBlock Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}" Margin="0,0,0,12"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Button, Modal, Swap, CopyButton - all support background, foreground, and border overrides.
                </TextBlock>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="16" RowSpacing="16">
                    <!-- Default Button -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Button" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyButton Content="Primary" Variant="Primary" HorizontalAlignment="Left" />
                    </StackPanel>

                    <!-- Styled Button -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Styled Button" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyButton Content="Custom Colors" Variant="Primary" HorizontalAlignment="Left">
                            <daisy:DaisyButton.Resources>
                                <SolidColorBrush x:Key="DaisyButtonPrimaryBackground" Color="#FF6B35" />
                                <SolidColorBrush x:Key="DaisyButtonPrimaryForeground" Color="White" />
                            </daisy:DaisyButton.Resources>
                        </daisy:DaisyButton>
                    </StackPanel>

                    <!-- Default Modal Backdrop -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Modal Backdrop (default)" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <TextBlock Text="DaisyModalBackdropBrush: Semi-transparent black" Opacity="0.6" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Tertiary" />
                    </StackPanel>

                    <!-- Custom Modal Colors -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Modal Colors" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <TextBlock Text="Override DaisyModalBackground, DaisyModalBorderBrush" Opacity="0.6" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Tertiary" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Data Input Controls -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-input" Title="Data Input" />
                <TextBlock Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}" Margin="0,0,0,12"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Input, Select, Toggle, Checkbox, Radio, Range, NumericUpDown, OtpInput, FileInput
                </TextBlock>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="16">
                    <!-- Default Input -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Input" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyInput Watermark="Default styling..." />
                    </StackPanel>

                    <!-- Styled Input -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Styled Input" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyInput Watermark="Custom border...">
                            <daisy:DaisyInput.Resources>
                                <SolidColorBrush x:Key="DaisyInputBorderBrush" Color="#8B5CF6" />
                                <SolidColorBrush x:Key="DaisyInputFocusBorderBrush" Color="#A78BFA" />
                            </daisy:DaisyInput.Resources>
                        </daisy:DaisyInput>
                    </StackPanel>

                    <!-- Default Toggle -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Toggle" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyToggle Content="Toggle me" IsChecked="True" Variant="Primary" HorizontalAlignment="Left" />
                    </StackPanel>

                    <!-- Styled Toggle -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Toggle Knob" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyToggle Content="Custom knob" IsChecked="True" Variant="Primary" HorizontalAlignment="Left">
                            <daisy:DaisyToggle.Resources>
                                <SolidColorBrush x:Key="DaisyToggleKnobBrush" Color="#FBBF24" />
                            </daisy:DaisyToggle.Resources>
                        </daisy:DaisyToggle>
                    </StackPanel>

                    <!-- Default Range -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Range" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyRange Value="50" Minimum="0" Maximum="100" Variant="Primary" />
                    </StackPanel>

                    <!-- Styled Range -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Range Track" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyRange Value="50" Minimum="0" Maximum="100" Variant="Primary">
                            <daisy:DaisyRange.Resources>
                                <SolidColorBrush x:Key="DaisyRangeFillBrush" Color="#10B981" />
                                <SolidColorBrush x:Key="DaisyRangeThumbBrush" Color="#059669" />
                            </daisy:DaisyRange.Resources>
                        </daisy:DaisyRange>
                    </StackPanel>

                    <!-- Default Checkbox -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Checkbox" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyCheckBox Content="Check me" IsChecked="True" Variant="Primary" HorizontalAlignment="Left" />
                    </StackPanel>

                    <!-- Styled Checkbox -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Checkbox" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyCheckBox Content="Custom colors" IsChecked="True" Variant="Primary" HorizontalAlignment="Left">
                            <daisy:DaisyCheckBox.Resources>
                                <SolidColorBrush x:Key="DaisyCheckBoxPrimaryBorderBrush" Color="#EC4899" />
                                <SolidColorBrush x:Key="DaisyCheckBoxPrimaryBackground" Color="#EC4899" />
                            </daisy:DaisyCheckBox.Resources>
                        </daisy:DaisyCheckBox>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Data Display Controls -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-display" Title="Data Display" />
                <TextBlock Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}" Margin="0,0,0,12"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Badge, Card, Avatar, Stat, Countdown, Table, List, Kbd, ChatBubble
                </TextBlock>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="16">
                    <!-- Default Badge -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Badge" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyBadge Content="Primary" Variant="Primary" HorizontalAlignment="Left" />
                    </StackPanel>

                    <!-- Styled Badge -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Badge" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyBadge Content="Custom" Variant="Primary" HorizontalAlignment="Left">
                            <daisy:DaisyBadge.Resources>
                                <SolidColorBrush x:Key="DaisyBadgePrimaryBackground" Color="#7C3AED" />
                                <SolidColorBrush x:Key="DaisyBadgePrimaryForeground" Color="White" />
                            </daisy:DaisyBadge.Resources>
                        </daisy:DaisyBadge>
                    </StackPanel>

                    <!-- Default Card -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Card" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyCard Width="200" Variant="Compact" HorizontalAlignment="Left">
                            <TextBlock Text="Card content" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Primary" />
                        </daisy:DaisyCard>
                    </StackPanel>

                    <!-- Styled Card -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Card Background" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyCard Width="200" Variant="Compact" HorizontalAlignment="Left">
                            <daisy:DaisyCard.Resources>
                                <SolidColorBrush x:Key="DaisyCardBackground" Color="#1E3A5F" />
                            </daisy:DaisyCard.Resources>
                            <TextBlock Text="Dark blue card" Foreground="White"
                                       daisy:FlowerySizeManager.ResponsiveFont="Primary" />
                        </daisy:DaisyCard>
                    </StackPanel>

                    <!-- Default Kbd -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Orientation="Horizontal">
                        <TextBlock Text="Default Kbd:" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" VerticalAlignment="Center"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyKbd Content="Ctrl" />
                        <TextBlock Text="+" Opacity="0.5" Foreground="{ThemeResource DaisyBaseContentBrush}" VerticalAlignment="Center" Margin="4,0"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyKbd Content="S" />
                    </StackPanel>

                    <!-- Styled Kbd -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4" Orientation="Horizontal">
                        <TextBlock Text="Custom Kbd:" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" VerticalAlignment="Center"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyKbd Content="Esc">
                            <daisy:DaisyKbd.Resources>
                                <SolidColorBrush x:Key="DaisyKbdBackground" Color="#DC2626" />
                                <SolidColorBrush x:Key="DaisyKbdForeground" Color="White" />
                            </daisy:DaisyKbd.Resources>
                        </daisy:DaisyKbd>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Feedback Controls -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-feedback" Title="Feedback" />
                <TextBlock Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}" Margin="0,0,0,12"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Alert, Progress, RadialProgress, Tooltip
                </TextBlock>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="16" RowSpacing="16">
                    <!-- Default Progress -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Progress" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyProgress Value="60" Variant="Primary" />
                    </StackPanel>

                    <!-- Styled Progress -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Progress Fill" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyProgress Value="60" Variant="Primary">
                            <daisy:DaisyProgress.Resources>
                                <SolidColorBrush x:Key="DaisyProgressFillBrush" Color="#F59E0B" />
                            </daisy:DaisyProgress.Resources>
                        </daisy:DaisyProgress>
                    </StackPanel>

                    <!-- Default Alert -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Alert" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyAlert Variant="Info" Message="Info message" />
                    </StackPanel>

                    <!-- Styled Alert -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Alert Colors" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyAlert Variant="Info" Message="Custom styling">
                            <daisy:DaisyAlert.Resources>
                                <SolidColorBrush x:Key="DaisyAlertInfoBackground" Color="#312E81" />
                                <SolidColorBrush x:Key="DaisyAlertInfoForeground" Color="#C7D2FE" />
                            </daisy:DaisyAlert.Resources>
                        </daisy:DaisyAlert>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Navigation Controls -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-navigation" Title="Navigation" />
                <TextBlock Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}" Margin="0,0,0,12"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Menu, Tabs, Dock, Steps, Breadcrumbs, Pagination
                </TextBlock>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="16" RowSpacing="16">
                    <!-- Default Tabs -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                        <TextBlock Text="Default Tabs" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyTabs x:Name="DefaultTabs" Variant="Boxed" />
                    </StackPanel>

                    <!-- Styled Tabs -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                        <TextBlock Text="Custom Tab Colors" FontWeight="SemiBold" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                   daisy:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <daisy:DaisyTabs x:Name="StyledTabs" Variant="Boxed">
                            <daisy:DaisyTabs.Resources>
                                <SolidColorBrush x:Key="DaisyTabsActiveBackground" Color="#059669" />
                                <SolidColorBrush x:Key="DaisyTabsActiveForeground" Color="White" />
                            </daisy:DaisyTabs.Resources>
                        </daisy:DaisyTabs>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <daisy:DaisyDivider />

            <!-- Resource Keys Reference -->
            <StackPanel Style="{StaticResource GallerySectionStyle}">
                <local:SectionHeader SectionId="styling-reference" Title="Resource Keys Reference" />
                <TextBlock TextWrapping="Wrap" Opacity="0.8" Foreground="{ThemeResource DaisyBaseContentBrush}" Margin="0,0,0,12"
                           daisy:FlowerySizeManager.ResponsiveFont="Primary">
                    Below is a summary of common resource keys. For the complete list, see StylingResources.md in the documentation.
                </TextBlock>

                <daisy:DaisyCard Variant="Compact">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="Bold" Foreground="{ThemeResource DaisyPrimaryBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Primary">Core Controls</TextBlock>
                            <TextBlock FontFamily="Consolas" TextWrapping="Wrap" Opacity="0.9" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Tertiary">
DaisyButton{Variant?}Background, Foreground, BorderBrush
DaisyInput{Variant?}Background, Foreground, BorderBrush, FocusBorderBrush
DaisyCardBackground, Foreground
DaisyBadge{Variant}Background, Foreground
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="Bold" Foreground="{ThemeResource DaisyPrimaryBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Primary">Toggle/Checkbox/Radio</TextBlock>
                            <TextBlock FontFamily="Consolas" TextWrapping="Wrap" Opacity="0.9" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Tertiary">
DaisyToggle{Variant}KnobBrush, TrackBackground
DaisyCheckBox{Variant}BorderBrush, Background, CheckmarkBrush
DaisyRadio{Variant}BorderBrush, Background, DotBrush
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="Bold" Foreground="{ThemeResource DaisyPrimaryBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Primary">Progress/Range</TextBlock>
                            <TextBlock FontFamily="Consolas" TextWrapping="Wrap" Opacity="0.9" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Tertiary">
DaisyProgress{Variant}FillBrush, TrackBrush
DaisyRange{Variant}FillBrush, ThumbBrush, TrackBrush
DaisyRadialProgress{Variant}FillBrush, TrackBrush
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="Bold" Foreground="{ThemeResource DaisyPrimaryBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Primary">Table/List</TextBlock>
                            <TextBlock FontFamily="Consolas" TextWrapping="Wrap" Opacity="0.9" Foreground="{ThemeResource DaisyBaseContentBrush}"
                                       daisy:FlowerySizeManager.ResponsiveFont="Tertiary">
DaisyTableBackground, BorderBrush
DaisyTableRowBackground, Foreground, HoverBackground, ActiveBackground
DaisyListBackground, DaisyListRowBackground, Foreground
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </daisy:DaisyCard>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</local:ScrollableExamplePage>
