<UserControl
    x:Class="Flowery.Uno.Kiosk.Browser.Slides.FeedbackSlide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls">

    <Grid Padding="40,40,40,120">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Chat & Avatars -->
        <StackPanel Grid.Column="0" Spacing="20" VerticalAlignment="Top" Margin="0,0,20,0">
            <StackPanel Spacing="6">
                <TextBlock Text="COMMUNICATION" Foreground="{ThemeResource DaisyPrimaryBrush}" FontWeight="Bold" CharacterSpacing="200" FontSize="10" />
                <TextBlock Text="Chat Bubbles" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
            </StackPanel>

            <!-- Single Chat Bubble -->
            <daisy:DaisyChatBubble x:Name="Chat1" Header="Flowery.Uno" Footer="Just now" Variant="Primary" Size="Medium">
                <TextBlock Text="Welcome to the Flowery.Uno component library! This chat bubble demonstrates themed messaging with headers, footers, and multiple variants." TextWrapping="Wrap" FontSize="13" />
            </daisy:DaisyChatBubble>

            <!-- Avatars Section -->
            <StackPanel Spacing="10">
                <TextBlock Text="AVATAR STACK" FontSize="11" Opacity="0.6" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <StackPanel Orientation="Horizontal" Spacing="-12">
                    <daisy:DaisyAvatar Size="Medium" Shape="Circle" HasRing="True" RingColor="Primary" BorderThickness="3" BorderBrush="{ThemeResource DaisyBase200Brush}" PlaceholderSymbol="Contact" />
                    <daisy:DaisyAvatar Size="Medium" Shape="Circle" HasRing="True" RingColor="Secondary" BorderThickness="3" BorderBrush="{ThemeResource DaisyBase200Brush}" PlaceholderSymbol="People" />
                    <daisy:DaisyAvatar Size="Medium" Shape="Circle" HasRing="True" RingColor="Accent" BorderThickness="3" BorderBrush="{ThemeResource DaisyBase200Brush}" PlaceholderSymbol="OutlineStar" />
                    <daisy:DaisyAvatar Size="Medium" Shape="Circle" HasRing="True" RingColor="Success" BorderThickness="3" BorderBrush="{ThemeResource DaisyBase200Brush}" PlaceholderSymbol="Accept" />
                    <daisy:DaisyBadge Content="+5 more" Variant="Ghost" Size="Small" Margin="18,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
            
            <!-- Toast Preview -->
            <daisy:DaisyCard Padding="16">
                <StackPanel Spacing="10">
                    <TextBlock Text="TOAST NOTIFICATIONS" FontSize="11" Opacity="0.6" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyAlert Content="Success! Your changes have been saved." Variant="Success" Size="Small" />
                    <daisy:DaisyAlert Content="Warning: Low disk space detected." Variant="Warning" Size="Small" />
                </StackPanel>
            </daisy:DaisyCard>
        </StackPanel>

        <!-- Right: Rating & Loading -->
        <StackPanel Grid.Column="1" Spacing="20" VerticalAlignment="Top" Margin="20,0,0,0">
            <StackPanel Spacing="6">
                <TextBlock Text="FEEDBACK CONTROLS" Foreground="{ThemeResource DaisySecondaryBrush}" FontWeight="Bold" CharacterSpacing="200" FontSize="10" />
                <TextBlock Text="Ratings &amp; Status" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
            </StackPanel>

            <!-- Star Rating -->
            <daisy:DaisyCard Padding="20">
                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <TextBlock Text="How would you rate this library?" FontSize="13" HorizontalAlignment="Center" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    <daisy:DaisyRating x:Name="StarRating" Value="5" Maximum="5" Size="Large" HorizontalAlignment="Center" />
                    <TextBlock Text="5 out of 5 stars" FontSize="11" Opacity="0.6" HorizontalAlignment="Center" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                </StackPanel>
            </daisy:DaisyCard>

            <!-- Loading Animations -->
            <daisy:DaisyCard Padding="16" Background="Black">
                <StackPanel Spacing="10">
                    <TextBlock Text="LOADING ANIMATIONS" FontSize="11" Opacity="0.6" FontWeight="Bold" Foreground="{ThemeResource DaisyNeutralContentBrush}" />
                    <!-- Row 1: Creative variants -->
                    <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                        <daisy:DaisyLoading Variant="Spinner" Size="Small" />
                        <daisy:DaisyLoading Variant="CometTrail" Size="Small" Color="Primary" />
                        <daisy:DaisyLoading Variant="Wave" Size="Small" Color="Secondary" />
                        <daisy:DaisyLoading Variant="Pulse" Size="Small" Color="Accent" />
                        <daisy:DaisyLoading Variant="MatrixRain" Size="Small" Color="Success" />
                        <daisy:DaisyLoading Variant="TunnelZoom" Size="Small" Color="Info" />
                    </StackPanel>
                    <!-- Row 2: Business/Professional variants -->
                    <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                        <daisy:DaisyLoading Variant="DocumentFlipOff" Size="Small" />
                        <daisy:DaisyLoading Variant="InvoiceStamp" Size="Small" Color="Primary" />
                        <daisy:DaisyLoading Variant="CalendarTick" Size="Small" Color="Success" />
                        <daisy:DaisyLoading Variant="BatteryCharging" Size="Small" Color="Warning" />
                        <daisy:DaisyLoading Variant="TrafficLightDown" Size="Small" Color="Error" />
                        <daisy:DaisyLoading Variant="Win95FileCopy" Size="Small" Color="Info" />
                    </StackPanel>
                </StackPanel>
            </daisy:DaisyCard>

            <!-- Feature Badges -->
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <daisy:DaisyBadge Content="PRIMARY" Size="Medium" Variant="Primary" />
                <daisy:DaisyBadge Content="ACCENT" Size="Medium" Variant="Accent" />
                <daisy:DaisyBadge Content="SUCCESS" Size="Medium" Variant="Success" />
                <daisy:DaisyBadge Content="OUTLINE" Size="Medium" Variant="Info" IsOutline="True" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
