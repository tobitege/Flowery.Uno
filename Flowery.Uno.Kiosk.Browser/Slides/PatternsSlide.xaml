<UserControl
    x:Class="Flowery.Uno.Kiosk.Browser.Slides.PatternsSlide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls">

    <Grid Padding="40,30,40,120">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Spacing="4" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="BACKGROUND PATTERNS" HorizontalAlignment="Center" Foreground="{ThemeResource DaisyPrimaryBrush}" FontWeight="Bold" CharacterSpacing="200" FontSize="10" />
            <TextBlock Text="Textured Card Backgrounds" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
        </StackPanel>

        <!-- Pattern Cards Grid: 2 columns x 3 rows - cards added programmatically -->
        <Grid x:Name="CardsGrid" Grid.Row="1" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" 
              HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <!-- Row 0 -->
            <Border x:Name="Row0Left" Grid.Row="0" Grid.Column="0" Height="120" />
            <Border x:Name="Row0Right" Grid.Row="0" Grid.Column="1" Height="120" />
            <!-- Row 1 -->
            <Border x:Name="Row1Left" Grid.Row="1" Grid.Column="0" Height="120" />
            <Border x:Name="Row1Right" Grid.Row="1" Grid.Column="1" Height="120" />
            <!-- Row 2 -->
            <Border x:Name="Row2Left" Grid.Row="2" Grid.Column="0" Height="120" />
            <Border x:Name="Row2Right" Grid.Row="2" Grid.Column="1" Height="120" />
        </Grid>
    </Grid>
</UserControl>
