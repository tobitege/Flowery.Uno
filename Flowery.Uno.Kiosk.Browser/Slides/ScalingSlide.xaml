<UserControl
    x:Class="Flowery.Uno.Kiosk.Browser.Slides.ScalingSlide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:daisy="using:Flowery.Controls"
    xmlns:services="using:Flowery.Services"
    services:FloweryScaleManager.EnableScaling="True">

    <Grid Padding="40,40,40,120">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Spacing="6" HorizontalAlignment="Center" Margin="0,0,0,20" services:FloweryScaleManager.EnableScaling="False">
            <TextBlock Text="RUNTIME SCALING" HorizontalAlignment="Center" Foreground="{ThemeResource DaisyPrimaryBrush}" FontWeight="Bold" CharacterSpacing="200" FontSize="10" />
            <TextBlock Text="FloweryScaleManager Demo" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
            <TextBlock Text="Watch controls scale in real-time" HorizontalAlignment="Center" FontSize="12" Opacity="0.7" Foreground="{ThemeResource DaisyBaseContentBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" VerticalAlignment="Center">
            <!-- Left: Radial Progress showing Zoom Level - excluded from scaling -->
            <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center" services:FloweryScaleManager.EnableScaling="False">
                <daisy:DaisyRadialProgress x:Name="ZoomProgress" Value="50" Maximum="200" Size="Medium" Variant="Primary" ShowValue="True" Width="140" Height="140" />
                
                <TextBlock Text="FloweryScaleManager" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                <TextBlock Text="Real-time UI scaling" FontSize="10" Opacity="0.6" HorizontalAlignment="Center" Foreground="{ThemeResource DaisyBaseContentBrush}" />
            </StackPanel>

            <!-- Right: Demo Controls that will scale -->
            <daisy:DaisyCard x:Name="DemoCard" Grid.Column="1" Padding="18" MaxWidth="350" VerticalAlignment="Center">
                <StackPanel x:Name="DemoCardContent" Spacing="12">
                    <TextBlock x:Name="DemoTitle" Text="Interactive Controls" FontSize="14" FontWeight="Bold" Foreground="{ThemeResource DaisyBaseContentBrush}" />
                    
                    <daisy:DaisyInput x:Name="DemoInput" Label="SAMPLE INPUT" PlaceholderText="Text scales..." Variant="Bordered" Size="Small" />
                    
                    <StackPanel x:Name="DemoButtonRow" Orientation="Horizontal" Spacing="8">
                        <daisy:DaisyButton x:Name="DemoButton1" Content="Primary" Variant="Primary" Size="Small" />
                        <daisy:DaisyButton x:Name="DemoButton2" Content="Secondary" Variant="Secondary" Size="Small" />
                        <daisy:DaisyButton x:Name="DemoButton3" Content="Ghost" Variant="Ghost" Size="Small" />
                    </StackPanel>
                    
                    <daisy:DaisyProgress x:Name="DemoProgress" Value="65" Variant="Accent" Height="6" />
                    
                    <StackPanel x:Name="DemoBadgeRow" Orientation="Horizontal" Spacing="6">
                        <daisy:DaisyBadge x:Name="DemoBadge1" Content="SCALES" Variant="Primary" Size="ExtraSmall" />
                        <daisy:DaisyBadge x:Name="DemoBadge2" Content="IN" Variant="Secondary" Size="ExtraSmall" />
                        <daisy:DaisyBadge x:Name="DemoBadge3" Content="REAL-TIME" Variant="Accent" Size="ExtraSmall" />
                    </StackPanel>
                </StackPanel>
            </daisy:DaisyCard>
        </Grid>
    </Grid>
</UserControl>
