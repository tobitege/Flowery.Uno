<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Flowery.Controls">

    <!-- ===================== DaisyBadge ===================== -->
    <Style TargetType="controls:DaisyBadge">
        <Setter Property="Background" Value="{ThemeResource DaisyBase200Brush}" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="Padding" Value="{ThemeResource DaisyBadgeMediumPadding}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Height" Value="{ThemeResource DaisyBadgeMediumHeight}" />
        <Setter Property="FontSize" Value="{ThemeResource DaisyBadgeMediumFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:DaisyBadge">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        Height="{TemplateBinding Height}">
                        <ContentPresenter
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Margin="0,-2,0,0" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================== DaisyKbd ===================== -->
    <Style TargetType="controls:DaisyKbd">
        <Setter Property="Background" Value="{ThemeResource DaisyBase300Brush}" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="Padding" Value="9,1,9,1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="BorderThickness" Value="0,0,0,3" />
        <Setter Property="BorderBrush" Value="{ThemeResource DaisyBase100Brush}" />
        <Setter Property="Height" Value="24" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:DaisyKbd">
                    <Grid Height="{TemplateBinding Height}">
                        <!-- 1. The Shadow Side (Key Body) -->
                        <Border
                            Background="{TemplateBinding BorderBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}" />

                        <!-- 2. The Machined Rim (Outer Hardware Edge) -->
                        <Border
                            BorderBrush="{ThemeResource DaisyBaseContentBrush}"
                            BorderThickness="1"
                            Opacity="0.1"
                            CornerRadius="{TemplateBinding CornerRadius}" />

                        <!-- 3. The Top Face (Cap Surface) -->
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Margin="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                            <Grid>
                                <!-- Face Polish (Physical Shine) -->
                                <Border CornerRadius="{TemplateBinding CornerRadius}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="{Binding Color, Source={StaticResource DaisyBaseContentBrush}}" Offset="0" />
                                            <GradientStop Color="Transparent" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Opacity>0.05</Border.Opacity>
                                </Border>

                                <!-- Top "Actuation" Bezel (Inner Highlight) -->
                                <Border
                                    BorderBrush="{ThemeResource DaisyBaseContentBrush}"
                                    BorderThickness="1"
                                    Opacity="0.08"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Margin="-1" />

                                <ContentPresenter
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Margin="0,-1,0,0" />
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================== DaisyProgress (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyProgress">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="MinWidth" Value="100" />
    </Style>

    <!-- ===================== DaisyAlert (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyAlert">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
    </Style>

    <!-- ===================== DaisyDivider (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyDivider">
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
    </Style>

    <!-- ===================== DaisyTooltip (wrapper control) ===================== -->
    <Style TargetType="controls:DaisyTooltip">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ===================== DaisyDropdown (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyDropdown">
        <Setter Property="Background" Value="{ThemeResource DaisyBase200Brush}" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ===================== DaisyIndicator (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyIndicator">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!-- ===================== DaisyToast (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyToast">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>

    <!-- ===================== DaisyRadialProgress (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyRadialProgress">
        <Setter Property="Foreground" Value="{ThemeResource DaisyPrimaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ===================== DaisyCountdown (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyCountdown">
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ===================== DaisyPopover (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyPopover">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!-- ===================== DaisyAnimatedNumber (code-driven visual tree) ===================== -->
    <Style TargetType="controls:DaisyAnimatedNumber">
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
