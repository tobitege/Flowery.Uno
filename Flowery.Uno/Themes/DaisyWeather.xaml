                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Medium" />
                                <VisualState x:Name="Large">
                                    <VisualState.Setters>
                                        <Setter Target="MetricHeader.FontSize" Value="11" />
                                        <Setter Target="NowHeader.FontSize" Value="11" />
                                        <Setter Target="MaxHeader.FontSize" Value="11" />
                                        <Setter Target="UvLabel.FontSize" Value="13" />
