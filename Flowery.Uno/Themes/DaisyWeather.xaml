                                        <Setter Target="PART_HumidityIcon.Height" Value="20" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Background Layer -->
                        <Border Background="{TemplateBinding Background}"
                                Opacity="0.8"
                                CornerRadius="{TemplateBinding CornerRadius}" />

                        <Border x:Name="RootBorder"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                              ColumnDefinitions="Auto,Auto,Auto">
                            <!-- Header Row -->
                            <TextBlock x:Name="MetricHeader"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Text="Metric"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.8"
                                       Margin="4,2" />
                            <TextBlock x:Name="NowHeader"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       Text="Now"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.8"
                                       Margin="4,2"
                                       HorizontalAlignment="Center" />
                            <TextBlock x:Name="MaxHeader"
                                       Grid.Row="0"
                                       Grid.Column="2"
                                       Text="Max"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.8"
                                       Margin="4,2"
                                       HorizontalAlignment="Center" />

                             <!-- UV Row -->
                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        Margin="4,2">
                                <Path x:Name="PART_UvIcon"
                                      Width="16"
                                      Height="16"
                                      Stretch="Uniform"
                                      Fill="{ThemeResource DaisyWarningBrush}" />
                                <TextBlock x:Name="UvLabel"
                                           Text="UV"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}" />
                            </StackPanel>
                            <TextBlock x:Name="UvNowValue"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding UvIndex, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4,2" />
                            <TextBlock x:Name="UvMaxValue"
                                       Grid.Row="1"
                                       Grid.Column="2"
                                       Text="{Binding UvMax, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}}"
                                       FontSize="14"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.8"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4,2" />

                            <!-- Wind Row -->
                            <StackPanel Grid.Row="2"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        Margin="4,2">
                                <Path x:Name="PART_WindIcon"
                                      Width="16"
                                      Height="16"
                                      Stretch="Uniform"
                                      Fill="{ThemeResource DaisyInfoBrush}" />
                                <TextBlock x:Name="WindLabel"
                                           Text="{Binding WindUnit, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}" />
                            </StackPanel>
                            <TextBlock x:Name="WindNowValue"
                                       Grid.Row="2"
                                       Grid.Column="1"
                                       Text="{Binding WindSpeed, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4,2" />
                            <TextBlock x:Name="WindMaxValue"
                                       Grid.Row="2"
                                       Grid.Column="2"
                                       Text="{Binding WindMax, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}}"
                                       FontSize="14"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.8"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4,2" />

                            <!-- Humidity Row -->
                            <StackPanel Grid.Row="3"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        Margin="4,2">
                                <Path x:Name="PART_HumidityIcon"
                                      Width="16"
                                      Height="16"
                                      Stretch="Uniform"
                                      Fill="{ThemeResource DaisySecondaryBrush}" />
                                <TextBlock x:Name="HumidityLabel"
                                           Text="%"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}" />
                            </StackPanel>
                            <TextBlock x:Name="HumidityNowValue"
                                       Grid.Row="3"
                                       Grid.Column="1"
                                       Text="{Binding Humidity, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4,2" />
                            <TextBlock x:Name="HumidityMaxValue"
                                       Grid.Row="3"
                                       Grid.Column="2"
                                       Text="{Binding HumidityMax, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="14"
                                       Foreground="{TemplateBinding Foreground}"
                                       Opacity="0.8"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4,2" />
                        </Grid>

                    </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="weather:DaisyWeatherCard">
        <Setter Property="Background" Value="{ThemeResource DaisyBase100Brush}" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="weather:DaisyWeatherCard">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SizeStates">
                                <VisualState x:Name="ExtraSmall">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Padding" Value="8" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Small">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Padding" Value="12" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Medium" />
                                <VisualState x:Name="Large">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Padding" Value="20" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="ExtraLarge">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Padding" Value="24" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Background Layer -->
                        <Border Background="{TemplateBinding Background}"
                                Opacity="0.8"
                                CornerRadius="{TemplateBinding CornerRadius}" />

                        <Border x:Name="CardBorder"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                <weather:DaisyWeatherCurrent Grid.Row="0"
                                                             Size="{TemplateBinding Size}"
                                                             Temperature="{TemplateBinding Temperature}"
                                                             FeelsLike="{TemplateBinding FeelsLike}"
                                                             Condition="{TemplateBinding Condition}"
                                                             Date="{TemplateBinding Date}"
                                                             Sunrise="{TemplateBinding Sunrise}"
                                                             Sunset="{TemplateBinding Sunset}"
                                                             TemperatureUnit="{TemplateBinding TemperatureUnit}"
                                                             ShowSunTimes="{TemplateBinding ShowSunTimes}"
                                                             DateFormat="{TemplateBinding DateFormat}"
                                                             Visibility="{Binding ShowCurrent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <controls:DaisyDivider Grid.Row="1"
                                                       Margin="0,12"
                                                       Visibility="{Binding ShowForecast, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <weather:DaisyWeatherForecast Grid.Row="2"
                                                              HorizontalAlignment="Stretch"
                                                              Size="{TemplateBinding Size}"
                                                              ItemsSource="{TemplateBinding Forecast}"
                                                              TemperatureUnit="{TemplateBinding TemperatureUnit}"
                                                              Visibility="{Binding ShowForecast, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <Grid Grid.Row="3"
                                      Margin="0,12,0,0"
                                      Visibility="{Binding ShowMetrics, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <weather:DaisyWeatherMetrics Size="{TemplateBinding Size}"
                                                                 UvIndex="{TemplateBinding UvIndex}"
                                                                 UvMax="{TemplateBinding UvMax}"
                                                                 WindSpeed="{TemplateBinding WindSpeed}"
                                                                 WindMax="{TemplateBinding WindMax}"
                                                                 WindUnit="{TemplateBinding WindUnit}"
                                                                 Humidity="{TemplateBinding Humidity}"
                                                                 HumidityMax="{TemplateBinding HumidityMax}" />
                                </Grid>
                            </Grid>

                            <Border Background="{ThemeResource DaisyBase100Brush}"
                                    Opacity="0.9"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Visibility="{Binding IsLoading, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <controls:DaisyLoading HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                            </Border>

                            <controls:DaisyAlert Variant="Error"
                                                 Visibility="{Binding ErrorMessage, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringNotNullOrEmptyToVisibilityConverter}}">
                                <TextBlock Text="{TemplateBinding ErrorMessage}" TextWrapping="Wrap" />
                            </controls:DaisyAlert>
                        </Grid>


                    </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
