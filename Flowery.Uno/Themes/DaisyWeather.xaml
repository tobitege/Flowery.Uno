                                        <Setter Target="PART_HumidityIcon.Width" Value="18" />
                                        <Setter Target="PART_HumidityIcon.Height" Value="18" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="ExtraLarge">
                                    <VisualState.Setters>
                                        <Setter Target="MetricHeader.FontSize" Value="12" />
                                        <Setter Target="NowHeader.FontSize" Value="12" />
                                        <Setter Target="MaxHeader.FontSize" Value="12" />
                                        <Setter Target="UvLabel.FontSize" Value="14" />
                                        <Setter Target="WindLabel.FontSize" Value="14" />
                                        <Setter Target="HumidityLabel.FontSize" Value="14" />
                                        <Setter Target="UvNowValue.FontSize" Value="18" />
                                        <Setter Target="UvMaxValue.FontSize" Value="18" />
                                        <Setter Target="WindNowValue.FontSize" Value="18" />
