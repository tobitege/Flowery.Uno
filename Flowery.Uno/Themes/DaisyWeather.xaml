<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Flowery.Controls"
    xmlns:weather="using:Flowery.Controls.Weather"
>

    <!-- ===================== Weather Controls ===================== -->
    <Style TargetType="weather:DaisyWeatherIcon">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyPrimaryBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="weather:DaisyWeatherIcon">
                    <Grid Width="{TemplateBinding IconSize}"
                          Height="{TemplateBinding IconSize}">
                        <Viewbox Stretch="Uniform">
                            <Grid Width="64" Height="64">
                                <Canvas x:Name="PART_Snowflakes"
                                        Visibility="Collapsed"
                                        IsHitTestVisible="False">
                                    <Ellipse x:Name="PART_Snow1"
                                             Width="4"
                                             Height="4"
                                             Fill="{TemplateBinding Foreground}"
                                             Opacity="0"
                                             Canvas.Left="12"
                                             Canvas.Top="32" />
                                    <Ellipse x:Name="PART_Snow2"
                                             Width="3"
                                             Height="3"
                                             Fill="{TemplateBinding Foreground}"
                                             Opacity="0"
                                             Canvas.Left="28"
                                             Canvas.Top="30" />
                                    <Ellipse x:Name="PART_Snow3"
                                             Width="3.5"
                                             Height="3.5"
                                             Fill="{TemplateBinding Foreground}"
                                             Opacity="0"
                                             Canvas.Left="42"
                                             Canvas.Top="34" />
                                    <Ellipse x:Name="PART_Snow4"
                                             Width="3"
                                             Height="3"
                                             Fill="{TemplateBinding Foreground}"
                                             Opacity="0"
                                             Canvas.Left="22"
                                             Canvas.Top="28" />
                                </Canvas>

                                <Path x:Name="PART_Icon"
                                      Width="64"
                                      Height="64"
                                      Stretch="Uniform"
                                      Fill="{TemplateBinding Foreground}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />

                                <Border x:Name="PART_Flash"
                                        Background="White"
                                        Opacity="0"
                                        CornerRadius="4"
                                        Visibility="Collapsed"
                                        IsHitTestVisible="False" />
                            </Grid>
                        </Viewbox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="weather:DaisyWeatherCurrent">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="weather:DaisyWeatherCurrent">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SizeStates">
                                <VisualState x:Name="ExtraSmall">
                                    <VisualState.Setters>
                                        <Setter Target="ConditionIcon.IconSize" Value="32" />
                                        <Setter Target="DayText.FontSize" Value="10" />
                                        <Setter Target="DatePartText.FontSize" Value="9" />
                                        <Setter Target="TemperatureText.FontSize" Value="26" />
                                        <Setter Target="TemperatureUnitText.FontSize" Value="13" />
                                        <Setter Target="FeelsLikeLabel.FontSize" Value="9" />
                                        <Setter Target="FeelsLikeValue.FontSize" Value="9" />
                                        <Setter Target="FeelsLikeUnit.FontSize" Value="9" />
                                        <Setter Target="SunriseText.FontSize" Value="9" />
                                        <Setter Target="SunsetText.FontSize" Value="9" />
                                        <Setter Target="PART_SunriseIcon.Width" Value="10" />
                                        <Setter Target="PART_SunriseIcon.Height" Value="10" />
                                        <Setter Target="PART_SunsetIcon.Width" Value="10" />
                                        <Setter Target="PART_SunsetIcon.Height" Value="10" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Small">
                                    <VisualState.Setters>
                                        <Setter Target="ConditionIcon.IconSize" Value="40" />
                                        <Setter Target="DayText.FontSize" Value="12" />
                                        <Setter Target="DatePartText.FontSize" Value="11" />
                                        <Setter Target="TemperatureText.FontSize" Value="32" />
                                        <Setter Target="TemperatureUnitText.FontSize" Value="16" />
                                        <Setter Target="FeelsLikeLabel.FontSize" Value="10" />
                                        <Setter Target="FeelsLikeValue.FontSize" Value="10" />
                                        <Setter Target="FeelsLikeUnit.FontSize" Value="10" />
                                        <Setter Target="SunriseText.FontSize" Value="10" />
                                        <Setter Target="SunsetText.FontSize" Value="10" />
                                        <Setter Target="PART_SunriseIcon.Width" Value="12" />
                                        <Setter Target="PART_SunriseIcon.Height" Value="12" />
                                        <Setter Target="PART_SunsetIcon.Width" Value="12" />
                                        <Setter Target="PART_SunsetIcon.Height" Value="12" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Medium" />
                                <VisualState x:Name="Large">
                                    <VisualState.Setters>
                                        <Setter Target="ConditionIcon.IconSize" Value="64" />
                                        <Setter Target="DayText.FontSize" Value="18" />
                                        <Setter Target="DatePartText.FontSize" Value="16" />
                                        <Setter Target="TemperatureText.FontSize" Value="48" />
                                        <Setter Target="TemperatureUnitText.FontSize" Value="24" />
                                        <Setter Target="FeelsLikeLabel.FontSize" Value="12" />
                                        <Setter Target="FeelsLikeValue.FontSize" Value="12" />
                                        <Setter Target="FeelsLikeUnit.FontSize" Value="12" />
                                        <Setter Target="SunriseText.FontSize" Value="12" />
                                        <Setter Target="SunsetText.FontSize" Value="12" />
                                        <Setter Target="PART_SunriseIcon.Width" Value="16" />
                                        <Setter Target="PART_SunriseIcon.Height" Value="16" />
                                        <Setter Target="PART_SunsetIcon.Width" Value="16" />
                                        <Setter Target="PART_SunsetIcon.Height" Value="16" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="ExtraLarge">
                                    <VisualState.Setters>
                                        <Setter Target="ConditionIcon.IconSize" Value="56" />
                                        <Setter Target="DayText.FontSize" Value="16" />
                                        <Setter Target="DatePartText.FontSize" Value="14" />
                                        <Setter Target="TemperatureText.FontSize" Value="42" />
                                        <Setter Target="TemperatureUnitText.FontSize" Value="21" />
                                        <Setter Target="FeelsLikeLabel.FontSize" Value="13" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Background Layer (Transparent/Themed with Opacity) -->
                        <Border Background="{TemplateBinding Background}"
                                Opacity="0.8"
                                CornerRadius="{TemplateBinding CornerRadius}" />

                        <!-- Content Layer -->
                        <Border x:Name="RootBorder"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <weather:DaisyWeatherIcon x:Name="ConditionIcon"
                                                      Grid.Column="0"
                                                      IconSize="64"
                                                      Foreground="{ThemeResource DaisyPrimaryBrush}"
                                                      Condition="{TemplateBinding Condition}" />

                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Margin="16,0"
                                        MinWidth="100">
                                <TextBlock x:Name="DayText"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{TemplateBinding Foreground}"
                                           Text="{TemplateBinding FormattedDay}" />

                                <TextBlock x:Name="DatePartText"
                                           FontSize="16"
                                           Opacity="0.8"
                                           Foreground="{TemplateBinding Foreground}"
                                           Text="{TemplateBinding FormattedMonthDate}" />

                                <StackPanel x:Name="SunTimesPanel"
                                            Orientation="Horizontal"
                                            Spacing="16"
                                            Margin="0,8,0,0"
                                            Visibility="{Binding ShowSunTimes, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Path x:Name="PART_SunriseIcon"
                                              Width="16"
                                              Height="16"
                                              Stretch="Uniform"
                                              Fill="{ThemeResource DaisyWarningBrush}" />
                                        <TextBlock x:Name="SunriseText"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   Opacity="0.8"
                                                   Text="{Binding Sunrise, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TimeSpanToStringConverter}}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Path x:Name="PART_SunsetIcon"
                                              Width="16"
                                              Height="16"
                                              Stretch="Uniform"
                                              Fill="{ThemeResource DaisyErrorBrush}" />
                                        <TextBlock x:Name="SunsetText"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   Opacity="0.8"
                                                   Text="{Binding Sunset, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TimeSpanToStringConverter}}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="2"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="TemperatureText"
                                               FontSize="48"
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource DaisyPrimaryBrush}"
                                               Text="{Binding Temperature, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}}" />
                                    <TextBlock x:Name="TemperatureUnitText"
                                               FontSize="24"
                                               FontWeight="Light"
                                               VerticalAlignment="Top"
                                               Margin="2,8,0,0"
                                               Foreground="{ThemeResource DaisyPrimaryBrush}"
                                               Text="{Binding TemperatureUnit, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TemperatureUnitToDegreeConverter}}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Spacing="4"
                                            Margin="0,-4,0,0">
                                    <TextBlock x:Name="FeelsLikeLabel"
                                               FontSize="14"
                                               Opacity="0.8"
                                               Foreground="{TemplateBinding Foreground}"
                                               Text="{TemplateBinding FeelsLikeLabel}" />
                                    <TextBlock x:Name="FeelsLikeValue"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource DaisySecondaryBrush}"
                                               Text="{Binding FeelsLike, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}}" />
                                    <TextBlock x:Name="FeelsLikeUnit"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource DaisySecondaryBrush}"
                                               Margin="-4,0,0,0"
                                               Text="{Binding TemperatureUnit, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TemperatureUnitToDegreeConverter}}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>


                    </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================== DaisyWeatherForecastItem ===================== -->
    <Style TargetType="weather:DaisyWeatherForecastItem">
        <Setter Property="Background" Value="{ThemeResource DaisyBase100Brush}" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="weather:DaisyWeatherForecastItem">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SizeStates">
                                <VisualState x:Name="ExtraSmall">
                                    <VisualState.Setters>
                                        <Setter Target="ItemBorder.Padding" Value="4,4" />
                                        <Setter Target="DayText.FontSize" Value="8" />
                                        <Setter Target="ConditionIcon.IconSize" Value="16" />
                                        <Setter Target="HighTempText.FontSize" Value="8" />
                                        <Setter Target="LowTempText.FontSize" Value="8" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Small">
                                    <VisualState.Setters>
                                        <Setter Target="ItemBorder.Padding" Value="3,7" />
                                        <Setter Target="DayText.FontSize" Value="11" />
                                        <Setter Target="ConditionIcon.IconSize" Value="24" />
                                        <Setter Target="HighTempText.FontSize" Value="10" />
                                        <Setter Target="LowTempText.FontSize" Value="10" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Medium" />
                                <VisualState x:Name="Large">
                                    <VisualState.Setters>
                                        <Setter Target="ItemBorder.Padding" Value="16,10" />
                                        <Setter Target="DayText.FontSize" Value="13" />
                                        <Setter Target="ConditionIcon.IconSize" Value="32" />
                                        <Setter Target="HighTempText.FontSize" Value="12" />
                                        <Setter Target="TempSeparator.FontSize" Value="12" />
                                        <Setter Target="LowTempText.FontSize" Value="12" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="ExtraLarge">
                                    <VisualState.Setters>
                                        <Setter Target="ItemBorder.Padding" Value="20,12" />
                                        <Setter Target="DayText.FontSize" Value="14" />
                                        <Setter Target="ConditionIcon.IconSize" Value="40" />
                                        <Setter Target="HighTempText.FontSize" Value="13" />
                                        <Setter Target="TempSeparator.FontSize" Value="13" />
                                        <Setter Target="LowTempText.FontSize" Value="13" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Background Layer -->
                        <Border Background="{TemplateBinding Background}"
                                Opacity="0.8"
                                CornerRadius="{TemplateBinding CornerRadius}" />

                        <!-- Content Layer -->
                        <Border x:Name="ItemBorder"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="12,8">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock x:Name="DayText"
                                       Text="{TemplateBinding DayName}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}" />

                            <weather:DaisyWeatherIcon x:Name="ConditionIcon"
                                                      IconSize="28"
                                                      HorizontalAlignment="Center"
                                                      Foreground="{ThemeResource DaisyPrimaryBrush}"
                                                      Condition="{TemplateBinding Condition}" />

                            <StackPanel x:Name="TempStack"
                                        Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Spacing="0">
                                <TextBlock x:Name="HighTempText"
                                           Text="{Binding HighTemperature, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}, ConverterParameter=deg}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}" />
                                <TextBlock x:Name="LowTempText"
                                           Text="{Binding LowTemperature, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoubleToIntStringConverter}, ConverterParameter=deg}"
                                           FontSize="11"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}" />
                            </StackPanel>
                        </StackPanel>


                    </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="weather:DaisyWeatherForecast">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{ThemeResource DaisyBaseContentBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="MinHeight" Value="100" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"
                                Spacing="{Binding ItemSpacing, RelativeSource={RelativeSource TemplatedParent}}" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="weather:DaisyWeatherForecast">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SizeStates">
                                <VisualState x:Name="ExtraSmall">
                                    <VisualState.Setters>
                                        <Setter Target="LeftScrollIcon.Width" Value="8" />
                                        <Setter Target="LeftScrollIcon.Height" Value="8" />
                                        <Setter Target="RightScrollIcon.Width" Value="8" />
                                        <Setter Target="RightScrollIcon.Height" Value="8" />
                                        <Setter Target="PART_LeftScrollButton.Size" Value="ExtraSmall" />
                                        <Setter Target="PART_RightScrollButton.Size" Value="ExtraSmall" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Small">
                                    <VisualState.Setters>
                                        <Setter Target="LeftScrollIcon.Width" Value="10" />
                                        <Setter Target="LeftScrollIcon.Height" Value="10" />
                                        <Setter Target="RightScrollIcon.Width" Value="10" />
                                        <Setter Target="RightScrollIcon.Height" Value="10" />
                                        <Setter Target="PART_LeftScrollButton.Size" Value="Small" />
                                        <Setter Target="PART_RightScrollButton.Size" Value="Small" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Medium" />
                                <VisualState x:Name="Large">
                                    <VisualState.Setters>
                                        <Setter Target="LeftScrollIcon.Width" Value="14" />
                                        <Setter Target="LeftScrollIcon.Height" Value="14" />
                                        <Setter Target="RightScrollIcon.Width" Value="14" />
                                        <Setter Target="RightScrollIcon.Height" Value="14" />
                                        <Setter Target="PART_LeftScrollButton.Size" Value="Medium" />
                                        <Setter Target="PART_RightScrollButton.Size" Value="Medium" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="ExtraLarge">
                                    <VisualState.Setters>
                                        <Setter Target="LeftScrollIcon.Width" Value="16" />
                                        <Setter Target="LeftScrollIcon.Height" Value="16" />
                                        <Setter Target="RightScrollIcon.Width" Value="16" />
                                        <Setter Target="RightScrollIcon.Height" Value="16" />
                                        <Setter Target="PART_LeftScrollButton.Size" Value="Large" />
                                        <Setter Target="PART_RightScrollButton.Size" Value="Large" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Background Layer -->
                        <Border Background="{TemplateBinding Background}"
                                Opacity="0.8"
                                CornerRadius="{TemplateBinding CornerRadius}" />

                        <!-- Main Content -->
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          HorizontalScrollBarVisibility="Hidden"
                                          HorizontalScrollMode="Enabled"
                                          VerticalScrollBarVisibility="Disabled"
                                          VerticalScrollMode="Disabled">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>

                        <!-- Left Scroll Button -->
                        <controls:DaisyButton x:Name="PART_LeftScrollButton"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Shape="Circle"
                                              Size="Small"
                                              Variant="Neutral"
                                              Opacity="0.8"
                                              Margin="-6,0,0,0"
                                              Visibility="Collapsed">
                            <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z"
                                  Fill="{ThemeResource DaisyBaseContentBrush}"
                                  Stretch="Uniform"
                                  Width="12" Height="12" />
                        </controls:DaisyButton>

                        <!-- Right Scroll Button -->
                        <controls:DaisyButton x:Name="PART_RightScrollButton"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Shape="Circle"
                                              Size="Small"
                                              Variant="Neutral"
                                              Opacity="0.8"
                                              Margin="0,0,-6,0"
                                              Visibility="Collapsed">
                            <Path Data="M10,6L8.59,7.41L13.17,12L8.59,16.58L10,18L16,12L10,6Z"
                                  Fill="{ThemeResource DaisyBaseContentBrush}"
                                  Stretch="Uniform"
                                  Width="12" Height="12" />
                        </controls:DaisyButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="weather:DaisyWeatherMetrics">
